
@import "common/_font"
@import "common/_color"
@import "common/_item"

// itemdata
.item-data
	@extend .large-item
	margin: 0
.itemdata-title
	@extend .largeitem-title
.itemdata-attribute
	@extend .largeitem-attribute
.itemdata-status
	@extend .largeitem-status
.itemdata-comment
	@extend .largeitem-comment
.itemdata-characters
	@extend .largeitem-characters

.contents-area
	section:not(:first-of-type)
		margin-top: 30px
		h3
			margin-bottom: 10px
			color: $pink
			@extend .m
			font-size: 1.2rem
			&:before
				content: ""
				display: inline-block
				width: 26px
				height: 21px
				position: relative
				top: 4px
				margin-right: .25rem
		dl
			border: 2px solid $gray
			position: relative
			dt
				position: absolute
				padding: 20px
				@extend .b
				&:before
					content: ""
					display: inline-block
					width: 5px
					height: 7px
					background: url(../img/top/icon_list01.png) 0 0 no-repeat
					background-size: contain
					position: relative
					top: -2px
					margin-right: .25rem
			dd
				padding: 20px 20px 20px 170px
				border-bottom: 1px solid $gray
				strong
					display: inline-block
					margin-left: 1rem
					@extend .b
					b
						color: $orange
						font-size: 1.5rem
	
	>.btn-area
		display: block
		width: 100%
		padding: 40px 0 0
		text-align: center
		.btn-submit
			display: inline-block
			width: 40%
			height: 75px
			margin: 0 10px
			border-radius: 4px
			line-height: 75px
			vertical-align: top
			@extend .b
			font-size: 2rem
			
		.btn-keep
			position: relative
			top: 5px
			display: inline-block
			width: 64px
			height: 64px
			margin: 0
			padding: 40px 0 0
			background: $orange url(../img/top/icon_keep.png) center 10px no-repeat
			border-radius: 32px
			color: white
			@extend .b
			font-size: .75rem
			line-height: 1
			text-align: center
			&:hover
				background-color: $orange_o

// recruit data
.recruit-data
	> h3:before
		background: url(../img/detail/detail_icon_01.png) center no-repeat
		background-size: contain

// about entry
.about-entry
	> h3:before
		background: url(../img/detail/detail_icon_02.png) center no-repeat
		background-size: contain
	
// item message
.item-message
	> h3:before
		background: url(../img/detail/detail_icon_03.png) center no-repeat
		background-size: contain
	div
		display: flex
		justify-content: space-around
		flex-wrap: wrap
		padding: 20px
		border: 2px solid $gray
		p
			width: 100%
		figure
			width: 350px
			margin: 30px 0 0

// office data
.office-data
	> h3:before
		background: url(../img/detail/detail_icon_04.png) center no-repeat
		background-size: contain
	iframe
		margin: 20px 0 0

// company data
.company-data
	> h3:before
		background: url(../img/detail/detail_icon_05.png) center no-repeat
		background-size: contain



