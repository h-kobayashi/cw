.main
	padding: 90px 0 100px


// information
.information
	ul
		margin-top: 10px
	li
		display: flex
		flex-wrap: nowrap
		small
			width: 100px
			padding: 1rem 0
			border-bottom: 1px solid $pink
			font-size: .87rem
			text-align: center
		a
			flex: 1
			display: block
			padding: 1rem 1.5rem
			border-bottom: 1px solid $gray
			color: $black
			line-height: 1.25
