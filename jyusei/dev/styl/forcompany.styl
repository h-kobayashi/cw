
@import "common/_font"
@import "common/_color"
@import "common/_item"

// branding

.branding__wrapper
	min-width: 1100px
	max-width: 1700px
	height: 560px
	margin: 0 auto
	background: $pink3

.branding
	width: 1100px
	height: 560px
	margin: 0 auto
	padding: 60px 0 0
	text-align: center
	h2
		width: 898px
		height: 309px
		margin: 0 auto
		background: url(../img/forcompany/forcompany_img01.png) center top no-repeat
		>*
			opacity: 0
	a
		display: block
		width: 450px
		height: 80px
		margin: 50px auto 0
		padding: 14px 0 0
		background: $green
		border-right: 2px solid white
		border-bottom: 4px solid white
		border-radius: 4px
		@extend .b
		color: white
		font-size: 2rem
		text-align: center
		&:hover
			background: $green_o

// contentsnav
.contentsnav
	padding: 100px 0 0
	text-align: center
	li
		display: inline-block
		margin: 0 10px
	li a
		display: inline-block
		width: 194px
		height: 80px
		border: 2px solid $pink
		border-radius: 5px
		color: $pink
		text-align: center
		@extend .m
		font-size: 1.1rem
		&:after
			content: "▼"
			display: block
			font-size: .87rem
	for $i in 1..4
		li:nth-of-type({$i}) a
			&:before
				content: url('../img/forcompany/forcompany_icon' + ($i+6) + '.png')
				display: block
				margin: 10px 0 0

.content__wrapper
	min-width: 1100px
	max-width: 1700px
	margin: 0 auto
	>section
		width: 1100px
		margin: 0 auto
		padding: 100px 0
		>h2
			@extend .m
			font-size: 2.4rem
			text-align: center
			letter-spacing: .2em
			
// content01
.wrapper >div:nth-of-type(2):after
	content: ""
	display: block
	height: 230px
	background: $lightgray2 url(../img/forcompany/forcompany_icon05.png) center bottom no-repeat
	position: relative
	z-index: 1
	margin-top: -220px
.content01
	position: relative
	z-index: 2
	p
		margin-bottom: 1em
		@extend .m
		font-size: 1.75rem
		text-align: center
		small
			display: block
			margin-bottom: 1rem
			color: $pink
			font-size: 2rem
			&:before
				content: url(../img/forcompany/forcompany_icon01.png)
				display: inline-block
				vertical-align: middle
				margin-right: .5rem
	ol
		margin: 60px 0 0
		text-align: cetner
		display: flex
		flex-wrap: nowrap
		justify-content: space-around
		li
			display: block
			width: 330px
			padding: 40px
			background: white
			border: 1px solid $lightgray
			box-shadow: rgba(0,0,0,.2) 0 2px 4px
			@extend .m
			text-align: center
			strong
				@extend .m
				color: $pink
				font-size: 1.75rem
				line-height: 1.5
			p
				margin: 30px 0 0
				font-size: 1.1rem
				line-height: 1.75
				text-align: left
		for $i in 1..3
			li:nth-of-type({$i})
				&:before
					content: ""
					display: block
					height: 140px
					margin: 0 0 .25rem
					background: url('../img/forcompany/forcompany_icon0' + ($i+1) + '.png') left top no-repeat
		li:nth-of-type(3)
			&:before
				height: 125px
			p
				margin: 10px 0 0

// responsive
.responsive__wrapper
	min-width: 1100px
	max-width: 1700px
	height: 830px
	margin: 0 auto
	background: $lightgray2
.responsive
	width: 1100px
	margin: 0 auto
	padding: 50px 0 0
	position: relative
	text-align: center
	h2
		@extend .m
		font-size: 2.4rem
		line-height: 1.5
		letter-spacing: .1em
		&:after
			content: url(../img/forcompany/forcompany_img02.png)
			display: block
			margin: 50px auto
	h3
		@extend .m
		font-size: 2.4rem
		color: $pink
	p
		width: 990px
		margin: 20px auto
		@extend .o
		font-size: 4rem
		&:before
			content: url(../img/forcompany/forcompany_icon06.png)
			display: inline-block
			position: relative
			top: 3px
		small
			display: block
			@extend .m
			font-size: 1.2rem
			text-align: center
		.btn-contact
			float: right
			display: block
			width: 450px
			margin: 20px 0 0
			padding: 1.75rem 0
			background: $green
			border-radius: 4px
			box-shadow: 3px 3px 0 rgba(23,157,133,1)
			color: white
			font-family: "HGP創英角ｺﾞｼｯｸUB"
			font-size: 2.4rem
			text-align: center
			&:hover
				background: $green_o
		
// content02
.content02
	text-align: center
	h2
		color: $pink
	p
		margin: 30px 0
		@extend .m
		font-size: 1.5rem
		line-height: 1.5
	table
		width: 892px
		margin: 40px auto 0
		th,td
			padding: 1rem
			border: 1px solid $pink2
			@extend .b
			text-align: center
			vertical-align: middle
		th
			background: $lightpink2
			font-size: 1rem
		td
			font-size: 1.5rem
			small
				font-size: 1rem
			.linethrough
				text-decoration: line-through
			.red
				color: $red
				font-size: 1rem
				strong
					font-size: 1.75rem

// flow
.flow__wrapper
	min-width: 1100px
	max-width: 1700px
	margin: 0 auto
	padding: 100px 0
	background: $lightpink3
	.flow
		text-align: center
		h2
			@extend .b
			color: $pink2
			font-size: 2.4rem
			line-height: 1.5
			letter-spacing: .2em
			text-align: center
			&:before
				content: "ラクラク"
				display: inline-block
				margin-right: 1rem
				padding: .2em .5em
				background: $yellow2
				border-radius: 5px
				font-size: 1.25rem
				letter-spacing: 0
				vertical-align: text-bottom
				position: relative
				top: -6px
		ol
			width: 890px
			margin: 0 auto
			li
				display: flex
				align-items: center
				justify-content: center
				width: 100%
				height: 120px
				margin: 50px 0 0
				background: white
				border-radius: 5px
				@extend .m
				font-size: 1.2rem
				position: relative
			for $i in 1..5
				li:nth-of-type({$i})
					&:before
						content: "▲"
						color: $pink2
						font-size: 1rem
						position: absolute
						left: 30px
						transform: rotate(90deg)
					&:after
						content: "" + $i
						display: block
						@extend .j
						color: $pink2
						font-size: 4rem
						position: absolute
						top: 50%
						left: 60px
						margin-top: -2rem
			li:nth-of-type(6)
				background: $pink2
				color: white
				line-height: 1.75
				p
					text-align: center
			li:nth-of-type(7)
				&:before
					content: "▲"
					color: $pink2
					font-size: 1rem
					position: absolute
					left: 30px
					transform: rotate(90deg)
				&:after
					content: "6"
					display: block
					@extend .j
					color: $pink2
					font-size: 4rem
					position: absolute
					top: 50%
					left: 60px
					margin-top: -2rem
		>p
			display: inline-block
			margin: 40px auto 0
			padding: .25rem .5rem
			border-bottom: 2px solid $pink2
			text-align: center
			@extend .m
			color: $pink2
			font-size: 1.2rem
			letter-spacing: .2rem

// content03
.content03
	text-align: center
	h3
		display: inline-block
		min-width: 465px
		height: 45px
		margin: 70px auto 0
		padding: .5rem 3rem 1rem
		background: $pink2
		@extend .m
		color: white
		font-size: 1.75rem
		letter-spacing: .2rem
		text-align: center
		position: relative
		&:before
			content: ""
			display: block
			width: 0
			height: 0
			border-top: 15px solid $pink2
			border-left: 10px solid transparent
			border-right: 10px solid transparent
			position: absolute
			bottom: -15px
			left: 50%
			margin-left: -10px
	table
		width: 860px
		margin: 30px auto
		border-collapse: separate
		border-spacing: 5px
		th,td
			width: 25%
			height: 80px
			padding: 0 1rem
			@extend .m
			font-size: 1.2rem
			text-align: center
			vertical-align: center
		thead
			th:not(:first-of-type)
				background: $gray4
				color: white
			th:last-of-type
				background: $pink2
				color: white
		tbody
			th
				background: white
				border: 2px solid $gray4
			td
				background: $lightgray2
			td:last-of-type
				background: $lightpink2
				color: $pink2
				small
					display: block
					font-size: 1rem
	ol
		margin: 10px 0 0
		display: flex
		justify-content: space-around
		flex-wrap: wrap
		li
			display: block
			width: 332px
			margin: 30px 0 0
			padding: 40px 20px 20px
			background: white
			border: 1px solid $lightgray
			box-shadow: rgba(0,0,0,.2) 0 0 6px
			text-align: left
			strong
				display: block
				@extend .m
				color: $pink
				font-size: 1.5rem
				line-height: 1.5
				text-align: center
			p
				margin: 1rem
				@extend .m
				line-height: 1.75
				text-align: left
		for $i in 1..6
			li:nth-of-type({$i})
				&:before
					content: url('../img/forcompany/forcompany_icon1' + $i + '.png')
					display: block
					margin: 0 0 20px 20px

// faq
.faq__wrapper
	min-width: 1100px
	max-width: 1700px
	margin: 0 auto
	background: $lightgray2
.faqitems
	width: 1100px
	margin: 0 auto
	padding: 100px 0
	>h2
		@extend .m
		font-size: 2.4rem
		text-align: center
		letter-spacing: .2em
.faqitem
	margin: 30px 0 0
	padding: 40px 39px 40px 70px
	background: white
	&:first-of-type
		margin: 75px 0 0
	h3
		@extend .m
		color: $green4
		font-size: 1.1rem
		position: relative
		&:before
			content: "Q."
			display: inline-block
			@extend .b
			font-size: 1.5rem
			position: absolute
			top: -7px
			left: -33px
	p
		@extend .r
		margin: 30px 0 0
		font-size: 1.1rem
		line-height: 1.75
		position: relative
		&:before
			content: "A."
			display: inline-block
			@extend .b
			color: $pink
			font-size: 1.5rem
			position: absolute
			top: -5px
			left: -33px


