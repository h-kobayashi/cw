
@import "common/_color"
@import "common/_item"

// branding

.branding__wrapper
	min-width: 1100px
	height: 563px
	background: url(../img/top/top_mainimg.jpg) center top no-repeat

.branding
	width: 1100px
	height: 430px
	margin: 0 auto
	padding: 160px 0 0
	font-size: 2.4rem
	font-weight: bold 
	line-height: 1.5
	strong
		color: $pink
		font-size: 2.8rem

.front-search
	background: $lightgray
	display: flex
	align-items: center
	justify-content: center
	padding: 30px 0
	fieldset
		width: 280px
		margin: 0 5px
		label
			display: block
			margin: 0 0 5px
			padding: .25em 1em .1em
			background: $pink
			border-radius: 1em
			color: white
			font-size: 1.17em
			small
				display: inline
				font-size: .87em
				position: relative
				top: -.1em
				left: -.4em
			&:before
				content: ""
				display: inline-block
				width: 15px
				height: 13px
				background: url(../img/top/top_serch_icon01.png) 0 0 no-repeat
				background-size: contain
				position: relative
				top: 1px
				margin-right: .25em
		.select
			border: 2px solid $gray
			border-radius: 2px
			position: relative
			&:after
				content: ""
				display: inline-block;
				width: 10px
				height: 6px
				background: url(../img/top/top_serch_icon02.png) 0 0 no-repeat
				background-size: contain
				position: absolute
				top: 50%
				right: 10px
				margin-top: -3px
			select
				width: 100%
				padding: .5em
				border: none
			
	.btn-area
		width: 220px
		margin: 0 5px
		.btn-submit
			display: block
			width: 100%
			height: 72px
			border: none
			border-radius: 2px
			font-size: 1.2em
			font-weight: bold
			text-align: center
			line-height: 70px
			

// pickup items
.pickup-items
	.pickupitem
		@extend .large-item
	.pickupitem-title
		@extend .largeitem-title
	.pickupitem-attribute
		@extend .largeitem-attribute
	.pickupitem-status
		@extend .largeitem-status
	.pickupitem-comment
		@extend .largeitem-comment
	.pickupitem-characters
		@extend .largeitem-characters
		
// new items
.new-items
	@exntend .small-items
	.newitem
		@extend .smallitem
	.newitem-status
		@extend .smallitem-status

// information
.information
	ul
		margin-top: 10px
	li
		display: flex
		flex-wrap: nowrap
		small
			width: 100px
			padding: 1rem 0
			border-bottom: 1px solid $pink
			font-size: .87rem
			text-align: center
		a
			flex: 1
			display: block
			padding: 1rem 1.5rem
			border-bottom: 1px solid $gray
			color: $black
			line-height: 1.25
		a:hover
			text-decoration: underline

// about
.about-area
	display: block
	padding: 40px
	background: url(../img/top/top_bg01.jpg) 0 0 no-repeat
	background-size: cover
	line-height: 2
	strong
		display: block
		font-size: 1.5rem
	p
		margin: 30px 0
	li
		display: inline-block
		white-space: nowrap
	a
		display: inline
		color: $blue
		text-decoration: underline






