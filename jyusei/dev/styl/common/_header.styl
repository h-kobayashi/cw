
@import "_color"

.header__wrapper
	width: 100%
	border-top: 5px solid $pink

.header
	width: 1100px
	margin: 0 auto
	
.header-title
	display: inline-block

.header-nav
	float: right
	text-align: right

.breadclumbs
	clear: both
	font-size: .87em

	
