@import "_font"
@import "_color"

.header__wrapper
	width: 100%
	border-top: 5px solid $pink

.header
	width: 1100px
	margin: 0 auto
	
.header-title
	display: inline-block

.header-nav
	float: right
	text-align: right
	margin: 10px 0 0
	a
		display: inline-block
		padding: .25rem 1rem
		color: $black
		@extend .m
		text-decoration: none
		&:hover
			color: $pink
	.keeping-items:before,
	.recently-items:before
		content: ""
		display: inline-block
		width: 16px
		height: 16px
		background-size: contain
		position: relative
		top: 1px
		margin-right: .25rem
	.keeping-items:before
		background: url(../../img/top/header_icon_keep.png) 0 0 no-repeat
	.recently-items:before
		background: url(../../img/top/header_icon_history.png) 0 0 no-repeat
	.for-recruiter
		margin: 0 1rem
		background: $pink
		border-radius: 1rem
		color: white
		@extend .b
		&:hover
			background: $darkpink
			color: white

.breadclumbs
	clear: both
	margin: 1rem 0
	font-size: .75rem

	
// global nav
.globalnav__wrapper
	width: 100%
	border-top: 1px solid #e4e4e4
	border-bottom: 1px solid #e4e4e4

.globalnav
	width: 1100px
	margin: 0 auto
	display: flex
	flex-wrap: nowrap
	
	li
		display: block
		flex: 1
		a
			display: block
			height: 60px
			padding: 10px 0
			text-align: center
			color: $black
			@extend .b
			font-size: 1.1rem
			text-decoration: none
		a:hover
			color: $pink
		a:before
			content: ""
			display: inline-block
			width: 24px
			height: 24px
			margin-right: .25rem
			background-size: contain
			position: relative
			top: 7px
		.recruit-list:before
			background: url(../../img/top/navi_icon_01.png) center no-repeat;
		.about-jyusei:before
			background: url(../../img/top/navi_icon_02.png) center no-repeat;
		.faq:before
			background: url(../../img/top/navi_icon_03.png) center no-repeat;
		.contact:before
			background: url(../../img/top/navi_icon_04.png) center no-repeat;