
@import "_normalize"
@import "_color"

*
	box-sizing: border-box

html,body
	background: #fff
	font-family: Rounded M+ 1c, "メイリオ", sans-serif;
	font-size: 14px
	color: #373737

html,body,h1,h2,h3,h4,h5,h6,table,p,dl,dt,dd,ul,ol,li,hr,header,main,footer,section,article,figure,strong,b
	margin: 0
	padding: 0
	font-weight: normal
ul,ol,li
	list-style: none

img
	vertical-align: text-bottom

a
	color: $blue
	text-decoration: none
a:hover
	color: $blue_o
	text-decoration: none

h1,h2,h3,h4,h5,h6,b,strong,dt,th
	font-weight: normal


.wrapper
	width: 100%;
	margin: 0
	padding: 0

.main
	width: 1100px;
	margin: 0 auto;


@import '_header'
@import '_footer'
@import '_font'

