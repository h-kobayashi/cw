@import "_font"
@import "_color"

.large-item
	display: block
	margin: 30px 0 0
	padding: 30px 30px 124px
	border: 2px solid $gray
	border-top: 3px solid $pink
	position: relative
	.btn-area
		position: absolute
		left: 0
		bottom: 0
		display: block
		width: 100%
		padding: 20px
		background: $lightgray
		border-top: 1px solid $gray
		text-align: center
		a
			display: inline-block
			width: 40%
			height: 60px
			margin: 0 10px
			border-radius: 4px
			line-height: 60px
			vertical-align: text-bottom
		.btn-more
			font-size: 1.3rem
		.btn-submit
			font-size: 1.5rem
			
	.btn-keep
		position: absolute
		top: -13px
		right: 10px
		width: 64px
		height: 64px
		margin: 0
		padding: 40px 0 0
		background: $orange url(../img/top/icon_keep.png) center 10px no-repeat
		border-radius: 32px
		color: white
		@extend .b
		font-size: .75rem
		line-height: 1
		text-align: center
		&:hover
			background-color: $orange_o
			
.largeitem-title
	padding-left: 10px
	background: url(../img/top/icon_list01.png) 0 5px no-repeat
	@extend .m
	font-size: 1.17rem
	line-height: 1
	strong
		@extend .b
		font-size: 1.4rem
		
.largeitem-attribute
	margin: 10px 0 0
	overflow: hidden
	@extend .b
	font-size: .75rem
	strong
		float: left
		display: inline-block
		width: 7em
		padding: 2px 0 0
		background: $pink
		border-radius: 2px
		color: white
		text-align: center
	ul
		float: right
		li
			display: inline-block
			width: 6em
			padding: 2px 0
			background: $lightpink
			color: $pink
			text-align: center
			
.largeitem-status
	margin: 15px 0 0
	display: flex
	figure
		width: 280px
		margin-right: 10px
	dl
		flex: 1
		padding: 20px 20px 0
		background: $lightgray
		position: relative
		dt
			position: absolute
			width: 6rem
			padding: 0 0 0 .75rem
			background: url(../img/top/icon_list01.png) 0 6px no-repeat
			@extend .m
		dd
			position: relative
			padding: 0 0 .87rem 6rem
			ul
				position: absolute
				top: -3px
				right: 0
				li
					display: inline-block
					width: 1.5rem
					height: 1.5rem
					padding: .45rem 0 0
					background: $pink
					border-radius: 1.5rem
					color: white
					font-size: .75rem
					text-align: center
					line-height: 1
			strong
				display: inline-block
				margin-left: 1rem
				@extend .b
				b
					color: $orange
					font-size: 1.5rem
					
.largeitem-comment
	strong
		display: block
		margin: 10px 0
		color: $orange
		@extend .b
		font-size: 1.2rem
	span
		display: block
		height: auto
		line-height: 1.5
	span.ellipsis
		height: 3em

.largeitem-characters
	margin: 10px 0 0
	li
		display: inline-block
		width: 8em
		padding: 2px 0
		background: $lightgray2
		color: $pink
		@extend .m
		font-size: .75rem
		text-align: center


// small items
.small-items
	ul
		display: flex
		flex-wrap: wrap
		justify-content: space-between
		margin-top: 20px
		
.smallitem
	width: 414px
	>a
		display: block
		margin: 0 0 20px
		padding: 20px 10px 10px
		border: 2px solid $gray
	>a:hover
		background: $yellow
	h3
		padding: 0 .75rem 5px
		border-bottom: 1px solid $gray
		@extend .b
		small
			display: block
			width: 7em
			margin: 0 0 5px
			padding: 2px 0
			background: $pink
			border-radius: 2px
			color: white
			font-size: .75rem
			text-align: center
		strong
			font-size: 1.5rem
	p
		margin: .5rem 0 .5rem .75rem
		strong
			color: $orange
			@extend .b

.smallitem-status
	display: flex
	padding: 0 .75rem
	figure
		width: 130px
		margin-right: 1rem
	>div
		flex: 1
		>ul
			margin: 0
			li
				display: inline-block
				width: 7em
				padding: 2px 0
				background: $lightpink
				color: $pink
				@extend .b
				font-size: .75rem
				text-align: center
				vertical-align: top
		>dl
			dt
				margin-top: .25rem
				font-size: .75rem
			dd
				b
					color: $orange
					@extend .b
		
// search
.search-business,.search-job,.search-area,.search-character
	h2
		margin-bottom: 10px
	h3
		margin: .5rem 0
		color: $pink
		@extend .m
		font-size: 1rem
		&:before
			content: "â–¼"
			display: inline-block
			margin-right: .25em
	ul
		display: flex
		flex-wrap: wrap
		justify-content: flex-start
	a
		display: block
		margin: 0 0 15px
		padding: 2px 0 0
		background: $lightpink
		color: $black
		@extend .m
		line-height: 2
		text-align: center
		&:hover
			background: $lightpink_o

.search-business,.search-job
	ul
		margin-top: 20px
	li
		width: 31.5%
		margin-right: 1.8%

.search-area
	ul
		flex-wrap: nowrap
	li
		width: 6rem
		margin-right: 10px

.search-character
	ul
		justify-content: space-between
	li
		width: 23%
		
// banner area
.banner-area
	a
		display: block
		margin-bottom: 20px
		&:hover
			opacity: .7
	.bnr_tokushu
		height: 150px
		padding: 25px 270px 25px 160px
		background: url(../img/top/bnr_tokushu.jpg) 0 0 no-repeat
		background-size: contain
		strong
			display: block
			margin-bottom: .5rem
			color: $darkpink
			font-size: 2.2rem