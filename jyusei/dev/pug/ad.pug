	body.ad
		.wrapper

			include _header.pug

			main.main
				.contents-area
					h2 求人掲載のお申込み
					ul.form-step
						li.on 情報の入力
						li 入力内容の確認
						li 完了
					section.form-body
						form(method="post", action="ad_check.html")
							h3 お申込み内容
							table.form-table
								tr
									th 法人・企業名
									td.must 必須
									td
										fieldset
											input(type="text", placeholder="例：株式会社エムアイクリニック")
								tr
									th 法人・企業名（カナ）
									td.any 任意
									td
										fieldset
											input(type="text", placeholder="例：カブシキガイシャエムアイクリニック")
								tr
									th 郵便番号
									td.must 必須
									td
										fieldset.postcode
											input(type="text", placeholder="例：1600014")
											button.btn-green 郵便番号から住所を検索
								tr
									th(rowspan="2") 住所
									td.must 必須
									td
										fieldset.select
											select
												option 都道府県
												optgroup(label="北海道・東北")
													each val in ["北海道", "青森県", "秋田県", "山形県", "岩手県", "宮城県", "福島県"]
														option= val
												optgroup(label="北陸・中部")
													each val in ["新潟県", "富山県", "石川県", "福井県", "山梨県", "長野県", "岐阜県", "静岡県", "愛知県"]
														option= val
												optgroup(label="関東")
													each val in ["茨城県", "栃木県", "群馬県", "埼玉県", "東京都", "神奈川県"]
														option= val
												optgroup(label="近畿")
													each val in ["三重県", "滋賀県", "京都府", "大阪府", "兵庫県", "奈良県", "和歌山県"]
														option= val
												optgroup(label="中国・四国")
													each val in ["鳥取県", "島根県", "岡山県", "広島県", "山口県", "徳島県", "香川県", "愛媛県", "高知県"]
														option= val
												optgroup(label="九州・沖縄")
													each val in ["福岡県", "佐賀県", "長崎県", "熊本県", "大分県", "鹿児島県", "宮崎県", "沖縄県"]
														option= val
										fieldset.select
											select
												option 市区町村
										fieldset
											input(type="text", placeholder="町名・番地")
								tr
									td.any 任意
									td
										fieldset
											input(type="text", placeholder="建物名")
								tr
									th 担当者氏名
									td.must 必須
									td 
										fieldset.name
											input(type="text", placeholder="例：山田")
											input(type="text", placeholder="例：太郎")
								tr
									th 担当者氏名（カナ）
									td.any 任意
									td 
										fieldset.name
											input(type="text", placeholder="例：やまだ")
											input(type="text", placeholder="例：たろう")
								tr
									th 担当者所属部署
									td.any 任意
									td 
										fieldset
											input(type="text", placeholder="例：人事部")
								tr
									th メールアドレス
									td.must 必須
									td 
										fieldset
											input(type="text", placeholder="例：example@jusei-kyujin.com")
											small ※こちらのメールアドレス宛に求人掲載に関する連絡を行います。
								tr
									th 電話番号
									td.must 必須
									td 
										fieldset
											input(type="text", placeholder="例：09012345678")
							
