// @file _menu.styl
.main
	display: block
	flex: 1

.article__list
	display: flex
	width: 100%
	padding: 2px
	flex-wrap: wrap
	align-content: stretch
	
.article
	display: block
	width: auto
	min-width: 300px
	max-width: 600px
	flex: 1
	margin: 2px
	a
		display: block
		background: #fff
		border: 1px solid #333
		border-radius: 7px
		overflow: hidden
		color: #333
		text-decoration: none
		position: relative
	img
		display: block
		min-width: 100%
		max-height: 240px
		opacity: 1
	h2
		padding: 20px
		font-size: 1.5em
	p
		padding: 0 20px 20px
		font-size: 1em
		line-height: 1.5
	
	a:hover
		background: #f2f9ff
		border: 1px solid #333
		box-shadow: rgba(0,0,0,.2) 0 1px 2px
		top: -1px
		img
			opacity: .8
	a:active
		border: 1px solid #333
		box-shadow: rgba(0,0,0,.2) 0 1px 2px inset
		top: 1px
	