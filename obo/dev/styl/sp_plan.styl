
@import "common/_color"
@import "common/_modal"

// branding
.branding
	width: 100%
	margin: 0 auto
	padding: 25px 0
	background: $lightgreen
	text-align: center
	h1
		display: block
		width: 306px
		height: 113px
		margin: 0 auto
		padding: 50px 0 0
		background: url("../img/plan/sp/plan_sp_pagetitle_img01.png") center top no-repeat/contain
		text-align: center
		color: $white
		font-weight: bold
		font-size: 1.5rem

.main
	width: 100%

.contents-area
	width: 100%
	max-width: 1700px
	margin: 0 auto
	
	//navi
	.plannavi
		margin: 40px auto
		text-align: center
		p
			width: 280px
			margin: 0 auto
			font-size: 1.28rem
			line-height: 1.1
			position: relative
			>b
				color: $green
				font-weight:bold
				margin-left: -.25em
			strong
				color: $pink
				font-weight: bold
				margin-left: -.25em
				>b
					font-size: 1.8em
			&:before
				content: ""
				display: block
				width: 17px
				height: 48px
				background: url(../img/plan/sp/plan_sp_sec01_img01.png) no-repeat 0 0 /contain
				position: absolute
				left: -20px
				top: 0
			&:after
				content: ""
				display: block
				width: 17px
				height: 48px
				background: url(../img/plan/sp/plan_sp_sec01_img02.png) no-repeat 0 0 /contain
				position: absolute
				right: -20px
				top: 0
		ul
			width: 300px
			margin: 10px auto
			li
				margin: 10px 0 0
				border: 1px solid $gray
				border-radius: 5px
				dl
					display: flex
					flex-wrap: nowrap
				dt
					width: 130px
					border-radius: 5px 0 0 0
					padding: 15px 0 0
					color: $white
					font-weight: bold
					font-size: 1.28rem
					line-height: 1.2
					text-align: center
					position: relative
					strong
						display: block
						color: $yellow
						font-weight: bold
				dd
					flex: 1
					padding: 15px 0 10px
					border-radius: 0 5px 0 0
					text-align: center
					span
						display: block
						width: 100px
						height: 20px
						margin: 0 auto
						border-radius: 10px
						color: $white
						font-size: .87rem
						font-weight: bold
						line-height: 20px
						text-align: center
					strong
						display: block
						color: $red
						font-size: 1.28rem
						font-weight: bold
						small
							font-size: .7rem
							margin-left: -.25em
							vertical-align: middle
				a
					display: block
					height: 27px
					background: $green4
					border-radius: 0 0 5px 5px
					color: $white
					font-weight: bold
					font-size: .87rem
					text-align: center
					line-height: 27px
						
			li:nth-of-type(1)
				dt
					background: $blue
					&:after
						border-top-color: $blue
				dd
					span
						background: $blue
			li:nth-of-type(2)
				dt
					background: $orange
					&:after
						border-top-color: $orange
				dd
					span
						background: $orange
			li:nth-of-type(3)
				dt
					background: $green3
					&:after
						border-top-color: $green3
				dd
					span
						background: $green3
				
	// plan_item
	.plan_item
		width: 304px
		margin: 60px auto 0
		border-radius: 5px
		.plan_header
			height: 88px
			padding: 30px 0 0
			position: relative
			border-radius: 0
			&:before
				content: ""
				display: block
				position: absolute
				top: -30px
				left: 10px
			&:after
				content: ""
				display: block
				width: 0
				height: 0
				border-left: 18px solid transparent
				border-right: 18px solid transparent
				position: absolute
				bottom: -16px
				left: 50%
				margin-left: -18px
			h2
				color: $yellow
				font-weight: bold
				font-size: 2rem
				text-align: center
				text-decoration: underline
				&:before
					display: none
				span
					color: $white
		.plan_intro
			text-align: center
			padding: 30px 0 0
			p
				font-size: 1rem
				strong
					display: block
					font-weight: bold
					font-size: 1.5rem
					span
						color: $pink
					[data-ruby]
						position: relative
					[data-ruby]::before
						content: attr(data-ruby)
						position: absolute
						top: -1em
						left: 0
						right: 0
						margin: auto
						font-size: 1em
				b
					font-size: 1.14em
					color: $green
					font-weight: bold
		.plan_price
			margin: 40px 10px 0
			position: relative
			text-align: center
			border-radius: 10px
			h3
				width: 294px
				height: 46px
				position: relative
				margin: -24px 0 0 -12px
				text-align: center
				color: $white
				font-size: 1.2rem
				font-weight: bold
				line-height: 33px
			p
				margin: 5px 0 0
				position: relative
				color: $red
				font-size: 1.28rem
				font-weight: bold
				line-height: 1
				b
					font-weight: bold
					font-size: 2.5rem
				strong
					font-weight: bold
					font-size: 3.57rem
					line-height: 1
				&:before
					content: ""
					display: inline-block
				small
					display: block
					margin: 10px
					padding: 10px
					border-radius: 40px
					text-align: center
					font-size: .87rem
					font-weight: bold
					line-height: 1.2
					b
						color: $pink
						font-size: .87rem
						font-weight: bold
		.plan_reward
			margin: 35px 10px 0
			padding: 35px 10px 20px
			background: $lightpink
			border-radius: 5px
			position: relative
			&:before
				content: ""
				background: url(../img/plan/sp/plan_sp_sec02-4_img04.png) no-repeat 0 0 /contain
				display: block
				width: 85px
				height: 40px
				position: absolute
				top: -20px
				left: 50%
				margin-left: -43px
			h3
				color: $pink
				font-weight: bold
				font-size: 1.28rem
				text-align: center
				&:before
					content: ""
					background: url(../img/plan/sp/plan_sp_sec02-4_img05.png) no-repeat 0 0/contain
					display: inline-block
					width: 75px
					height: 44px
					position: absolute
					top: -22px
					left: 20px
				small
					display: inline-block
					padding: 0 1em
					background: $green
					border-radius: 1em
					color: $white
					font-size: .87rem
					line-height: 1.5
					font-weight: normal
					position: relative
					top: -3px
			p
				margin: 0
				font-size: .87rem
				line-height: 1.5
				color: $black2
				img
					display: block
					width: 129px
					margin: 0 auto 1em
		.plan_note
			margin: 20px 10px 0
			color: $black2
			font-size: .87rem
			line-height: 1.5
			li
				margin-bottom: 1em
		.plan_example
			margin: 20px 10px 0
			h3
				width: 218px
				height: 73px
				margin: 0 auto
				background: url(../img/plan/sp/plan_sp_sec02-4_img07.png) no-repeat 0 0/contain
				position: relative
				text-indent: 9999px
				white-space: nowrap
				overflow: hidden
			dl
				margin: 20px auto 0
			p
				display: block
				margin: 16px 0 0
				padding: 40px 0 10px
				border-radius: 5px
				text-align: center
				color: $yellow
				font-weight: normal
				font-size: 1.7rem
				line-height: 1.2
				position: relative
				&:before
					content: ""
					display: block
					width: 0
					height: 0
					border-left: 8px solid transparent
					border-right: 8px solid transparent
					position: absolute
					top: -12px
					left: 50%
					margin-left: -8px
				span
					color: $yellow
					font-size: .87rem
					display: inline-block
					b
						font-weight: bold
						font-size: 2em
					&:not(:first-of-type)
						margin-left: -.5em
				[data-ruby]
					position: relative
				[data-ruby]::before
					content: attr(data-ruby)
					position: absolute
					top: -1.5em
					left: 0
					right: 0
					margin: auto
					color: $white
					font-weight: normal
					font-size: .7rem
					display: block
					min-width: 100%
					line-height: 1.2
				small
					display: block
					margin: 10px 0 0
					color: $black2
					font-weight: bold
					font-size: 1.1rem
					line-height: 1.2
		.plan_points
			margin: 60px 10px 30px
			border: 2px dotted $pink
			border-radius: 5px
			position: relative
			h3
				width: 294px
				height: 72px
				margin: -40px 0 0 -10px
				background: url(../img/plan/sp/plan_sp_sec02-4_img01.png) no-repeat center top/contain
				text-align: center
				color: $white
				font-weight: bold
				font-size: 1.2rem
				line-height: 1.1
				padding-top: 10px
				position: relative
				&:after
					content: ""
					display: block
					width: 63px
					height: 54px
					background: url(../img/plan/sp/plan_sp_sec02-4_img02.png) no-repeat 0 0/contain
					position: absolute
					right: 0
					bottom: -20px
			ul
				margin: 10px 10px 20px
				li
					display: block
					margin: 5px 0 0
					padding: 7px
					border: 2px solid $lightpink
					border-radius: 30px
					text-align: center
					color: $pink
					font-size: 1.12rem
					line-height: 1
					font-weight: bold
				
		&#plan1
			border: 3px solid $blue
			.plan_header
				background: $blue
				&:before
					width: 239px
					height: 64px
					background: url(../img/plan/sp/plan_sp_sec02_img01.png) no-repeat 0 0/contain
				&:after
					border-top: 16px solid $blue
			.plan_price
				border: 2px dotted $blue
				border-radius: 5px
				h3
					background: url(../img/plan/sp/plan_sp_sec02_img02.png) no-repeat center top/contain
				p:before
					width: 55px
					height: 47px
					background: url(../img/plan/sp/plan_sp_sec02_img03.png) no-repeat 0 0/contain
					position: absolute
					top: 0
					right: 30px
				p small
					border: 2px solid $blue
					color: $blue
			.plan_example
				dl
					overflow: hidden
					dt
						color: $white
						font-weight: bold
						font-size: 1.28rem
						display: block
						padding: .5em
						line-height: 1.2
						background: $blue
						position: relative
						text-align: center
						&:after
							content: ""
							display: block
							width: 0
							height: 0
							border-top: 7px solid $blue
							border-left: 7px solid transparent
							border-right: 7px solid transparent
							position: absolute
							bottom: -7px
							left: 50%
							margin-left: -7px
					dd
						padding: 5px 0 0
						text-align: center
						&:before
							content: ""
							display: block
							width: 281px
							height: 176px
							margin: 10px auto
							background: url(../img/plan/sp/plan_sp_sec02_img10.png) no-repeat 0 0/contain
						span
							display: block
							height: 45px
							margin-left: 10px
							padding-left: 35px
							text-align: center
							border: 2px solid $blue
							border-radius: 45px
							color: $black2
							font-size: 1.1rem
							font-weight: bold
							line-height: 42px
							position: relative
							&:before
								content: ""
								display: block
								width: 45px
								height: 45px
								border-radius: 45px
								position: absolute
								top: -2px
								left: -12px
							&:first-of-type:before
								background: $blue url(../img/plan/sp/plan_sp_sec02_img08.png) no-repeat center/34px 36px
							&:last-of-type:before
								background: $blue url(../img/plan/sp/plan_sp_sec02_img07.png) no-repeat center/25px 36px
							strong
								display: inline-block
								position: relative
								margin-left: -.25em
								color: $red
								font-weight: bold
						img
							display: inline-block
							margin: 10px auto
							width: 17px
							height: 11px
				p
					background: $blue
					position: relative
					&:before
						border-bottom: 12px solid $blue
					[data-ruby]:first-of-type::before
							width: 4.2rem
							top: -2.5em
							left: -1em
					span:last-of-type
						&:after
							content: "（税別）"
							display: block
							font-size: .87rem
							text-align: right
							position: absolute
							right: 0
							bottom: -.75rem
		&#plan2
			border: 3px solid $orange
			.plan_header
				background: $orange
				&:before
					width: 268px
					height: 68px
					background: url(../img/plan/sp/plan_sp_sec03_img01.png) no-repeat 0 0/contain
				&:after
					border-top: 16px solid $orange
			.plan_intro
				p strong
					margin-bottom: 1em
					[data-ruby]::before
						top: auto
						bottom: -1em
			.plan_price
				border: 2px dotted $orange
				border-radius: 5px
				h3
					background: url(../img/plan/sp/plan_sp_sec03_img02.png) no-repeat center top/contain
				p:before
					width: 55px
					height: 47px
					background: url(../img/plan/sp/plan_sp_sec03_img03.png) no-repeat 0 0/contain
					position: absolute
					top: 0
					right: 30px
				p small
					border: 2px solid $orange
					color: $orange
			.plan_example
				>img
					width: 278px
					margin: 20px auto 0
				p
					background: $orange
					position: relative
					&:before
						border-bottom: 12px solid $orange
					[data-ruby]:first-of-type::before
							width: 4.2rem
							top: -2.5em
							left: -1em
		&#plan3
			border: 3px solid $green4
			.plan_header
				background: $green4
				&:before
					width: 240px
					height: 68px
					background: url(../img/plan/sp/plan_sp_sec04_img01.png) no-repeat 0 0/contain
				&:after
					border-top: 16px solid $green4
			.plan_intro
				p strong
					margin-bottom: 1em
					[data-ruby]::before
						top: auto
						bottom: -1em
			.plan_price
				border: 2px dotted $green4
				border-radius: 5px
				h3
					background: url(../img/plan/sp/plan_sp_sec04_img02.png) no-repeat center top/contain
				dl
					dt
						display: block
						color: $black2
						font-size: 1.2rem
						font-weight: bold
						text-align: center
					dd
						color: $red
						font-size: 1.28rem
						font-weight: bold
						strong
							font-weight: bold
							font-size: 2em
							line-height: 1
							letter-spacing: -.05em
				dl:before
					width: 55px
					height: 47px
					background: url(../img/plan/sp/plan_sp_sec03_img03.png) no-repeat 0 0/contain
					position: absolute
					top: 0
					right: 30px
				p
					margin: 10px auto 30px
					color: $black2
					font-size: .87rem
					font-weight: bold
					strong
						color: $red
						font-size: .7rem
						font-weight: bold
						b
							font-size: 1.28rem
							line-height: 1
							font-weight: bold
			.plan_reward
				background: $lightyellow
				h3
					color: $green
					text-align: center
					line-height: 1.2
					&:before
						display: none
					&:after
						content: ""
						display: block
						width: 75px
						height: 44px
						background: url(../img/plan/sp/plan_sp_sec02-4_img05.png) no-repeat center/contain
						position: absolute
						top: -22px
						right: 20px
					b
						color: $pink
						font-weight: bold
				p
					&:before
						content: "お客様負担なし！"
						display: inline-block
						padding: 0 .5em
						background: $pink
						border-radius: 1em
						color: $white
						font-size: 1rem
						line-height 2
						float: left
						position: relative
						top: 40px
					img
						width: 129px
						height: 99px
						vertical-align: middle
						float: right
					span
						clear: both
						display: block
						padding: 1em 0 0
						font-size: .87rem
						line-height: 1.5
						color: $black2
			.plan_example
				>img
					width: 278px
					margin: 20px auto 0
				p
					padding: 10px 0 15px
					background: $green3
					&:before
						border-bottom: 12px solid $green3
					span
						font-weight: bold
						font-size: 1.1rem
					small
						display: block
						color: $black2
						font-size: 1.28rem
						
				
	// address
	.plan_address
		width: 100%
		margin: 40px auto 0
		padding: 30px 10px
		background: $lightgreen3
		address
			margin: 0 auto
			padding: 20px 15px
			background: $green
			border-radius: 5px
			text-align: center
			font-style: normal
			h3
				margin-bottom: 10px
				color: $white
				font-size: 1.2rem
				font-weight: bold
			p
				padding: 10px
				border: 2px solid $lightyellow2
				border-radius: 5px
				color: $lightyellow2
				font-size: 2rem
				font-weight: bold
				line-height: 1.1
				&:before
					content: ""
					display: inline-block
					width: 24px
					height: 24px
					background: url(../img/plan/sp/plan_sp_sec05_img01.png) no-repeat 0 0/contain
					margin-right: .25em
				small
					display: block
					color: $white
					font-size: .7rem
					font-weight: normal
			a
				display: block
				height: 70px
				margin: 10px auto 0
				background: $pink
				border-bottom: 3px solid $darkpink
				border-radius: 5px
				text-align: center
				color: $white
				font-size: 1.28rem
				font-weight: bold
				line-height: 70px
				small
					font-size: .87rem
	
	// plannavi footer
	.plannavi_footer
		@extend .contents-area .plannavi
		ul li
			height: auto
			padding: 15px 0
			border-radius: 5px
			dt
				padding: 0
				height: auto
				background: none
				line-height: 1.2
				border-radius: 10px
				&:after
					display: none
			dd
				padding: 0
				span
					display: block
					width: 60%
					height: auto
					margin: 0 auto
					padding: 0
					text-align: center
					font-size: .87rem
					line-height: 1.5
				strong
					font-size: 1.8rem
					line-height: 1.2
					letter-spacing: -.05em
					small
						.7rem
		ul li:nth-of-type(1)
			background: $blue
			dd
				span
					background: $white
					color: $blue
		ul li:nth-of-type(2)
			background: $orange
			dd
				span
					background: $white
					color: $orange
		ul li:nth-of-type(3)
			background: $green3
			dd
				span
					background: $white
					color: $green3
	
	// compare
	.plan_compare
		width: 100%
		margin: 20px auto 0
		padding: 30px 0 20px
		background: url(../img/plan/sp/plan_sp_sec07_bg.jpg) no-repeat center top/cover
		h3
			float: right
			width: 167px
			height: 71px
			margin: 0 10px 10px auto
			padding-top: 16px
			background: url(../img/plan/sp/plan_sp_sec07_img01.png) no-repeat center top/contain
			text-align: center
			color: $white
			font-size: 1.2rem
			font-weight: bold
			line-height: 1.2
		>ul
			clear: both
			display: flex
			flex-wrap: nowrap
			justify-content: flex-end
			margin: 0
			>li
				width: 29%
				padding: 1px
				>ul
					display: flex
					flex-wrap: wrap
					>li
						width: 100%
						height: 51px
						padding: 4px 0
						display: flex
						flex-wrap: wrap
						justify-content: center
						align-items: center
						margin-bottom: 2px
						background: rgba(255,255,255,.8)
						font-size: .7rem
						line-height: 1.2
						position: relative
						b
							font-size: 2rem
							
						p
							font-size: .7rem
							text-align: center
							b
								font-size: 1.1rem
								font-weight: bold
								line-height: 1
								&:nth-of-type(2)
									margin-left: -.25em
						small
							display: block
							font-size: .7rem
							color: $black2
					[data-ruby]
						position: relative
					[data-ruby]::before
						content: attr(data-ruby)
						position: absolute
						left: -46%
						top: 5px
						width: 33%
						padding: 5px
						background: $green
						color: $white
						text-align: center
						font-size: 1rem
						line-height: 1.1
					[data-ruby]::after
						content: ""
						display: block
						width: 0
						height: 0
						border-top: 5px solid transparent
						border-left: 7px solid $green
						border-bottom: 5px solid transparent
						position: absolute
						left: -5px
						top: 50%
						margin-top: -5px
