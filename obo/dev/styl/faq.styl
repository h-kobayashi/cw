
@import "common/_color"
@import "common/_modal"

.contents-area
	
	// faq block
	.faq__block
		position: relative
		margin-bottom: 110px
		h2
			height: 94px
			padding-top: 10px
			background: url(../img/faq/pc/q&a_pc_pagetitle_bg.png) no-repeat center top
			color: $white
			font-size: 2.14rem
			letter-spacing: .2em
			text-align: center
			line-height: 1.67
			&:before
				display: none
		ul
			text-align: center
			margin: 60px 0 0
			li
				display: inline-block
				margin: 0 50px
				position: relative
				&:before
					content: ""
					width: 7px
					height: 10px
					background: url(../img/faq/pc/q&a_pc_icon01.png) no-repeat 0 0/ contain
					position: absolute
					top: .67em
					left: -1.25em
				a
					color: $green
					font-size: 1.57rem
					text-decoration: underline
		>div
			h3
				width: 272px
				height: 47px
				margin: 60px 0 30px
				background: $orange
				border-radius: 24px
				color: $white
				font-size: 1.57rem
				line-height: 47px
				text-align: center
			dl
				padding: 30px 45px 30px 75px
				border-top: 1px solid $gray
				line-height: 2
				dt
					color: $green
					font-size: 1.28rem
					position: relative
					&:before
						content: "Q."
						margin-right: .5em
						font-size: 1.57rem
						position: absolute
						top: -5px
						left: -30px
				dd
					font-size: 1.14rem
					position: relative
					&:before
						content: "A."
						margin-right: .5em
						color: $orange
						font-size: 1.57rem
						position: absolute
						top: -5px
						left: -30px
			dl:last-of-type
				border-bottom: 1px solid $gray

	// singleJob items
	.singleJob-items
		position: relative
		ul
			margin: 20px 0 0
			li
				display: inline-block
				margin: 0 6px
				padding: 0 0 1rem
				border: 2px solid $gray
				font-size: .87em
				.item-header
					display: inline-block
					margin: 15px 0 0
					line-height: 1.5
					padding: .25em 1em .20em 1.5em
					background: $lightgray
					vertical-align: middle
				p
					margin: .5rem 1.5rem
					font-size: .92rem
				.item-data
					margin: 0 1.5rem .5rem
					padding: .25rem 1rem
					background: $lightgray
					text-align: right
					b
						font-size: 2em
						color: $orange
						font-weight: bold
				dl
					display: flex
					flex-wrap: wrap
					margin: 0 1.5rem
					dt
						display: inline-block
						color: $green
						font-weight: bold
					dd
						flex: 1
		.prev
			display: inline-block
			padding: 20px
			position: absolute
			top: 50%
			left: -60px
			margin-top: -24px
			cursor: pointer
			&:hover
				background: $lightgray
		.next
			display: inline-block
			padding: 20px
			position: absolute
			top: 50%
			right: -60px
			margin-top: -24px
			cursor: pointer
			&:hover
				background: $lightgray
					
	// banner area
	.banner-area
		a
			display: block
			margin: 0 0 20px
		figure
			position: relative
		figcaption
			display: block
			font-size: 2.5rem
			color: $red
			line-height: 170px
			text-align: center
			position: absolute
			top: 0
			right: 310px
			>b
				font-size: 4rem


					