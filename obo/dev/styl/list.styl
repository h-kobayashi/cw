
@import "common/_color"
@import "common/_modal"

.contents-area

// search conditions
	.search-conditions
		.type-select
			position: relative
			right: auto
			bottom: 0
			z-index: 2
			span
				height: 41px
				line-height: 41px
				cursor: pointer
			span.selected
				height: 48px
				line-height: 48px
				position: relative
				bottom: -1px
		section
			margin-top: 0
			padding: 30px 30px 0
			border: 1px solid $gray
			border-bottom: none
			position: relative
			color: $black2
			$.search-all
				padding-top: 34px
			&.search-part
				border-top: 5px solid $orange
			&.search-full
				border-top: 5px solid $blue
			.search-item
				display: flex
				flex-wrap: nowrap
				margin: 0 0 10px
				label
					display: flex
					justify-content: center
					align-items: center
					width: 154px
					margin: 0 5px 0 0
					padding: 1em
					background: $green2
					border-radius: 4px
					color: $white
					font-size: 1.14em
					line-height: 1.5
					white-space: nowrap
				.condition
					display: block
					flex: 1
					padding: 1em
					background: $lightgray2
					border-radius: 4px
					font-size: 1.14em
					line-height: 1.5
					button
						margin-left: 1em
						padding: 0 1.5em
						background: $white
						border: 1px solid $green2
						border-radius: 1em
						color: $green2
						font-size: .87rem
						line-height: 1.5
						vertical-align: middle
						&:hover
							background: $green2
							color: $white
		.btn-area
			position: relative
			padding: 10px 0 20px
			text-align: center
			border: 1px solid $gray
			border-top: none
			.btn-submit
				display: inline-block
				width: 290px
				height: 60px
				margin: 0 auto
				background: $pink
				border: 0px solid transparent
				border-radius: 6px
				text-align: center
				color: $white
				font-size: 1.14em
				line-height: 60px
			.btn-submit:hover
				background: $pink1
			.btn-clear
				position: absolute
				top: 10px
				right: 30px
				text-decoration: underline
	// listitems
	section.list-items
		margin-top: 30px
		>p:first-of-type
			font-size: 1.14rem
			strong
				color: $green2
				font-size: 1.71rem
				small
					margin: 0 -.5em
					font-size: 1.14rem
		>nav
			.item-sort
				display: block
				padding: 2em 0 1em
				border-bottom: 1px solid $gray
				text-align: right
				font-size: 1.14em
				a
					display: inline-block
					padding: 0 1em 0 .5em
				a.selected
					color: $green2
					cursor: default
			.page-nav
				display: block
				padding: 20px 0 45px
				text-align: center
				a
					display: inline-block
					padding: .5em 1em
					background: $lightgray2
					&:hover
						background: $lightgreen
				a.disabled
					background: $lightgray2
					color: $gray3
					cursor: default
				a.selected
					background: $green2
					color: $white
					cursor: default
				
		>a
			display: block
			margin: 90px 0
			
		>ul
			margin: 40px 0 0
			display: flex
			flex-wrap: wrap
			justify-content: space-between
		>ul:first-of-type
			margin: 0
		>ul>li
			margin: 80px 0 0
			background: $white
			border: 1px solid $gray
			box-shadow: rgba(0,0,0,.2) 0 1px 2px
			position: relative
		>ul>li:first-of-type
			margin: 0
		>ul>li.part
			border-top: 5px solid $orange
			h3
				background: url("../img/list/pc/job_icon02.png") 0 0 no-repeat
				color: $orange
			.item-status table td strong
				color: $orange
			.btn-area
				.btn-more
					background: $orange
				.btn-more:hover
					background: $orange1
		>ul>li.full
			border-top: 5px solid $blue
			h3
				background: url("../img/list/pc/job_icon02_02.png") 0 0 no-repeat
				color: $blue
			.item-status table td strong
				color: $blue
			.btn-area
				.btn-more
					background: $blue
				.btn-more:hover
					background: $blue1
		>ul>li.pritem
			border-radius: 4px 4px 0 0
			.celebration
				top: -2px
			.item-header
				small
					position: static
					display: block
					height: 32px
					color: $white
					line-height: 30px
					&:before
						content: url(../img/list/pc/pc_list_icon_pr.png)
						display: inline-block
						margin-right: 10px
						position: relative
						top: -11px
						left: -2px
						vertical-align: top
			&.full
				border: 2px solid $blue2
				.item-header
					small
						background: $blue2
						border-bottom: 5px solid $blue
			&.part
				border: 2px solid $orange3
				.item-header
					small
						background: $orange3
						border-bottom: 5px solid $orange
		>ul>li
			width: 100%
			.celebration
				height: 50px
				padding: 5px 20px 0 45px
				background: $pink url("../img/top/pc/job_icon01.png") 15px 12px no-repeat
				border-radius: 0 0 4px 4px
				color: $yellow
				font-size: 1em
				text-align: center
				line-height: 45px
				position: absolute
				top: -5px
				right: 14px
				strong
					font-size: 1.2em
					font-weight: bold
			.item-header
				small
					position: absolute
					top: -2.5em
					left: 0
					font-size: .75em
				p
					padding: 20px 0
					line-height: 2
					a
						display: inline-block
						margin-right: .5em
						padding: .25em 1em .25em 1.5em
						background: $lightgray
						vertical-align: middle
						text-decoration: underline
					a:hover
						background: $gray
			h3
				margin: 0 30px
				padding-left: 60px
				font-size: 1.2em
				line-height: 1.5
			.item-status
				margin: 10px 30px
				display: flex
				figure
					width: 300px
				table
					flex: 1
					height: 210px
					border-collapse: collapse
					th,td
						padding: 0 1.5em
						border: 1px solid $gray
					th
						text-align: center
					td
						text-align: left
						font-weight: bold
						a
							text-decoration: underline
						small
							display: inline-block
							margin-left: 1em
							font-weight: normal
							font-size: .87em
						strong
							display: inline-block
							margin-right: .25em
							font-size: 1.2em
			.item-characters
				margin: 0 20px 0 30px
				ul
					display: flex
					flex-wrap: wrap
					li
						width: 110px
						height: 20px
						margin: 0 3px 3px 0
						border: 1px solid $gray2
						border-radius: 2px
						color: $green
						font-size: .75em
						text-align: center
						line-height: 20px
			.item-comment
				margin: 10px 30px
			.item-footer
				width: 100%
				position: absolute
				bottom: -1.5em
				small
					font-size: .5em
				small:first-of-type
					float: left
				small:last-of-type
					float: right
			.btn-area
				padding: 20px
				background: $lightgray2
				border-top: 1px solid $gray
				text-align: center
				a
					display: inline-block
					height: 60px
					margin: 0 10px
					border-radius: 2px
					font-size: 1.2em
					font-weight: bold
					line-height: 60px
					position: relative
				.btn-keep
					width: 246px
					background: $white
					border: 1px solid $gray
					color: $green
					&:after
						content: url("../img/top/pc/job_icon03.png")
						width: 69px
						height: 45px
						position: absolute
						right: -5px
						bottom: 0
				.btn-keep:hover
					background: $green1
					color: $white
				.btn-more
					width: 383px
					color: $white
					
	// other items
	.other-items
		>ul
			margin: 0
			display: flex
			flex-wrap: wrap
			justify-content: space-between
		>ul>li
			background: $white
			border: 1px solid $gray
			box-shadow: rgba(0,0,0,.2) 0 1px 2px
			position: relative
			width: 412px
			margin: 40px 0 0
			font-size: .75em
			.celebration
				height: 40px
				padding: 2px 10px 0 35px
				background: $pink url("../img/top/pc/job_icon01_s.png") 11px 7px no-repeat
				border-radius: 0 0 4px 4px
				color: $yellow
				font-size: 1em
				text-align: center
				line-height: 35px
				position: absolute
				top: -1px
				right: 14px
				strong
					font-size: 1.2em
					font-weight: bold
			.item-header
				margin: 15px
				padding: 0 0 10px
				border-bottom: 1px solid $gray
				p
					padding: 0
					strong
						display: block
						margin-bottom: 1em
						padding: .5em 150px .5em 40px
						font-weight: bold
						text-decoration: underline
			h3
				margin: 0 15px
				font-size: 1.2em
				line-height: 1.5
			.item-status
				margin: 10px 30px
				display: flex
				figure
					width: 160px
					img
						width: 156px
				table
					flex: 1
					height: 120px
					th,td
						padding: 0 .5em
						text-align: left
						font-size: 1.2em
						font-weight: bold
						strong
							display: inline-block
							color: $orange
			&:hover
				background: #fffde6
				.item-status figure img
					opacity: 1
			&.part
				.item-header p strong
					background: url("../img/top/pc/job_icon02_01_s.png") 0 0 no-repeat
				h3
					color: $orange
				.item-status table td strong
					color: $orange
			&.full
				.item-header p strong
					background: url("../img/top/pc/job_icon02_02_s.png") 0 0 no-repeat
				h3
					color: $blue
				.item-status table td strong
					color: $blue

// keyword items
	.keyword-items
		ul
			margin: 20px 0 0
			li
				display: inline-block
				margin: 0 0 .5em
			li a
				display: block
				padding: 0.1em 1.75em 0
				background: $lightgray2
				font-size: 1.14em
				line-height: 2
				&:hover
					background: $gray
		>a
			display: block
			margin: 40px 0 0


					