
@import "common/_color"
@import "common/_modal"

// branding
.branding
	width: 100%
	max-width: 1700px
	margin: 0 auto
	background: url("../img/unnei/pc_unei_mainimg_bg.jpg") center top no-repeat
	box-shadow: rgba(0,0,0,.2) 0 1px 2px inset
	h1
		width: 1100px
		height: 492px
		margin: 0 auto
		background: url(../img/unnei/pc_unei_mainimg_img03.png) center no-repeat
		position: relative
		strong
			display: none
	h1:before,h1:after
		display: block
		text-indent: 0
		position: absolute
	h1:before
		content: url(../img/unnei/pc_unei_mainimg_img01.png)
		top: 30px
		left: 0
	h1:after
		content: url(../img/unnei/pc_unei_mainimg_img02.png)
		right: 25px
		bottom: -25px

.main
	width: 100%
	max-width: 1700px

.contents-area
	width: 100%
	max-width: 1700px
	margin: 0 auto

	// message
	.message
		width: 1100px
		margin: 0 auto
		padding-top: 100px
		position: relative
		&:before
			content: url(../img/unnei/pc_unei_massage_bg01.png)
			display: block
			position: absolute;
			top: 100px
			left: 30px
		&:after
			content: url(../img/unnei/pc_unei_tree_img01.png)
			display: block
			width: 1000px
			margin: 50px auto 0
		h2
			height: 150px
			padding: 75px 0 30px
			background: url(../img/unnei/pc_unei_massage_titlebg.png) center top no-repeat
			text-align: center
			color: $mosgreen
			font-size: 2rem
			font-weight: bold
			line-height: 1
			&:before
				display: none
		p
			margin: 2.5rem auto 0
			font-size: 1.1rem
			line-height: 2.5rem
			text-align: center
			position: relative
			z-index: 2
			strong
				font-size: 1.4rem
				color: $mosorange
				font-weight: bold
		h3
			margin: 4rem auto
			color: $mosgreen
			font-size: 2.5rem
			line-height: 1.3
			text-align: center
			position: relative
			&:before
				content: url(../img/unnei/pc_unei_massage_bg02.png)
				display: block
				position: absolute
				top: -300px
				right: -30px

	// company
	.company
		width: 920px
		margin: 140px auto 0
		h2
			height: 70px
			margin: 0 0 40px
			background: url(../img/unnei/pc_unei_gaiyou_titlebg.png) center bottom no-repeat
			text-align: center
			color: $mosgreen
			font-size: 2rem
			font-weight: bold
			line-height: 1
			&:before
				display: none
		dl
			display: flex
			width: 100%
			border-bottom: 1px solid $gray
			&:first-of-type
				border-top: 1px solid $gray
			dt
				display: flex
				justify-content: center
				align-items: center
				width: 230px
			dd
				flex: 1
				display: block
				padding: 1.5rem 0
				font-size: 1.1rem
				line-height: 2rem
				ul
					li
						list-style: disc
						margin-left: 1.5em
			
	// project
	.project
		width: 100%
		height: 674px
		padding: 64px 0 0
		background: url(../img/unnei/pc_unei_project_bg.png) center top no-repeat
		h2
			height: 141px
			padding: 60px 0 0
			background: url(../img/unnei/pc_unei_project_titilebg.png) center top no-repeat
			text-align: center
			color: $mosgreen
			font-size: 2rem
			font-weight: bold
			line-height: 1
			&:before
				display: none
		p
			margin: 2.5rem auto 0
			font-size: 1.1rem
			line-height: 2.5rem
			text-align: center
			position: relative
			z-index: 2
		ul
			display: flex
			flex-wrap: nowrap
			justify-content: center
			margin: 2.5rem auto 0
			li
				display: block
				width: 163px
				height: 145px
				margin: 0 10px
				background: url(../img/unnei/pc_unei_project_img01.png) 0 0 no-repeat
				text-align: center
				font-size: 2rem
				color: $white
				line-height: 158px
			
	// commons
	.information, .tokushu-area, .banner-area, .search-items, .about-area
		width: 850px
		margin: 70px auto 0
			