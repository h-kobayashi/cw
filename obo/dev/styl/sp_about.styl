	// flow
	.flow
		width: 100%
		padding-bottom: 30px
		h2
			margin: 0 auto
			text-align: center
			color: $green
			font-size: 1.5rem
			font-weight: bold
			line-height: 2rem
			&:before
				display: none
		ol
			margin: 0 10px
			li
				display: flex
				align-items: center
				min-height: 65px
				padding-left: 85px
				background-position: 10px 0
				background-repeat: no-repeat
				background-size: 64px 65px
				font-size: .87rem
				line-height: 1.5
				position: relative
				strong
					color: $green
					font-size: 1rem
				&:not(:first-of-type)
					margin-top: 15px
					div
						width: 100%
						position: relative
					div:before
						content: ""
						display: block
						width: 100%
						height: 15px
						background: url(../img/about/sp_about_sec08_arrow.png) no-repeat center/contain
						position: absolute
						left: -50px
						top: -25px
				.voice
					width: 140px
					height: 25px
					background-image: url(../img/about/sp_about_sec08_img02_1.png), url(../img/about/sp_about_sec08_img02_2.png)
					background-repeat: no-repeat, no-repeat
					background-position: left bottom, right bottom
					background-size: contain, contain
					text-align: center
					font-size: .87rem
					color: $green
					line-height: 25px
					position: relative
					top: -6px
					left: 15px
				.note-keep
					display: inline-block
					margin: .5em 0 0
					padding: .5em 1em
					background: $yellow
					dt
						font-size: 1rem
						&:before
							content: ""
							display: inline-block
							width: 15px
							height: 14px
							margin-right: .5em
							background: url(../img/about/sp_about_sec08_img02_3.png) no-repeat 0 0/contain
					dd
						font-size: .87rem
				.note-prize
					width: 106px
					height: 106px
					padding-top: 29px
					background: $yellow url(../img/about/sp_about_sec08_img06_2.png) no-repeat center 12px/24px 16px
					border-radius: 53px
					text-align: center
					position: absolute
					top: -45px
					right: 0
					dt
						font-size: .87rem
					dd
						font-size: .714rem
						line-height: 1.2
			for i in (1..6)
				li:nth-of-type({i})
					background-image: url("../img/about/sp_about_sec08_img0" + i + ".png")
	
	// faq
	.faq
		width: 100%
		padding-bottom: 30px
		h2
			margin: 0 auto 20px
			text-align: center
			color: $green
			font-size: 1.5rem
			font-weight: bold
			line-height: 2rem
			&:before
				display: none
		dl
			margin: 10px 10px 0
			padding: 20px 20px 10px
			border: 1px solid $gray
			font-size: .9rem
		dt
			display: block
			color: $green
			&:before
				content: "Q."
				font-size: 1.1rem
				margin-right: .5em
		dd
			display: block
			margin-top: .75em;
			div
				&:before
					content: "A."
					color: $orange
					font-size: 1.1rem
					margin-right: .5em
				a
					color: $orange
					text-decoration: underline
			.accordion
				display: block
				width: 100%
				height: 10px
				margin-top: 10px
				padding: 10px
				background: url(../img/about/sp_about_sec09_arrow02.png) no-repeat center/19px 10px
				transition: .4s
			.accordion.opened
				transform: rotate(540deg)
	
