
@import "common/_color"
@import "common/_modal"

// branding
.branding
	width: 100%
	height: 367px
	margin: 0 auto
	padding-top: 80px
	background: url("../img/about/sp_about_mainimg_bg.jpg") center top no-repeat
	background-size: cover
	text-align: center
	h1
		width: 100%
		height: 170px
		margin: 0 auto
		padding: 115px 0 0
		background: url(../img/about/sp_about_mainimg_copy.png) center top no-repeat
		background-size: 262px 103px
		position: relative
		font-size: .87rem
		line-height: 1.5
		strong
			display: none
	small
		display: block
		width: 188px
		height: 30px
		margin: 5px auto 0
		background: $orange
		border-radius: 15px
		color: $white
		font-size: 1.14rem
		text-align: center
		line-height: 30px

.contents-area

	// introduction
	.introduction
		padding-top: 30px
		position: relative
		h2
			margin: 0 auto
			text-align: center
			color: $green
			font-size: 1.5rem
			font-weight: bold
			line-height: 2rem
			&:before
				display: none
		>ul
			margin: 20px 10px 0
			li
				display: block
				margin: 10px 0 0
				padding: 10px 10px 10px 110px
				background: $orange
				border-radius: 10px
				text-align: center
				color: $white
				position: relative
				strong
					display: block
					font-size: 1.4rem
					font-weight: bold
				p
					margin: .5rem auto 0
					font-size: 1rem
					line-height: 1.2rem
				&:before
					content: ""
					display: block
					width: 120px
					position: absolute
					left: 0
			li:nth-of-type(1):before
				height: 105px
				background: url(../img/about/sp_about_sec01_img01.png) center no-repeat
				background-size: contain
				top: -7px
			li:nth-of-type(2):before
				height: 80px
				background: url(../img/about/sp_about_sec01_img02.png) center no-repeat
				background-size: contain
				top: 12px
			li:nth-of-type(3):before
				height: 64px
				background: url(../img/about/sp_about_sec01_img03.png) center no-repeat
				background-size: contain
				top: 16px
		p
			margin: 1rem 10px 0
			font-size: .87rem
			line-height: 2
			text-align: center
			position: relative
		article
			margin: 20px 10px 0
			h3
				height: 80px
				padding: 10px 0 0
				background: $green2
				border-radius: 8px 8px 0 0
				position: relative
				text-align: center
				img
					position: relative
					width: 253px
			.points
				padding: 10px
				background: repeating-linear-gradient(-45deg, $lightgreen2 0, $lightgreen2 15px, $white 15px, $white 30px)
				border-radius: 0 0 8px 8px
				ul
					li
						display: block
						margin: 35px 0 0
						padding: 25px 0 10px
						background: $white
						border-radius: 5px
						box-shadow: rgba(0,0,0,.2) 0 1px 2px
						color: $black2
						font-size: 1rem
						font-weight: bold
						line-height: 1.75
						text-align: center
						position: relative
						&:before
							content: ""
							display: block
							width: 49px
							height: 49px
							background-size: contain
							background-repeat: no-repeat
							position: absolute
							top: -27px
							left: 50%
							margin-left: -25px
						strong
							color: $orange
							font-weight: bold
					li:nth-of-type(1):before
						background-image: url(../img/about/sp_about_sec02_img01.png)
					li:nth-of-type(2):before
						background-image: url(../img/about/sp_about_sec02_img02.png)
					li:nth-of-type(3):before
						background-image: url(../img/about/sp_about_sec02_img03.png)
					li:nth-of-type(4):before
						background-image: url(../img/about/sp_about_sec02_img04.png)
	
