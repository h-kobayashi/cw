	// cm
	section.cm
		width: 100%
		height: 296px
		margin: 0 auto
		background: url(../img/about/sp_about_sec07_bg.jpg) center top no-repeat
		background-size: cover
		text-align: center
		figure
			width: 303px
			margin: 0 auto
			padding: 40px 0 0
			text-align: center
