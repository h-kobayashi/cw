
@import "common/_color"
@import "common/_modal"

.contents-area
	
	// listitems
	section.list-items
		margin-top: 30px
		>p:first-of-type
			font-size: 1.14rem
			strong
				color: $green2
				font-size: 1.71rem
				small
					margin: 0 -.5em
					font-size: 1.14rem
		>nav
			.item-sort
				display: block
				padding: 2em 0 1em
				border-bottom: 1px solid $gray
				text-align: right
				font-size: 1.14em
				a
					display: inline-block
					padding: 0 1em 0 .5em
				a.selected
					color: $green2
					cursor: default
			.page-nav
				display: block
				padding: 20px 0 45px
				text-align: center
				a
					display: inline-block
					padding: .5em 1em
					background: $lightgray2
					&:hover
						background: $lightgreen
				a.disabled
					background: $lightgray2
					color: $gray3
					cursor: default
				a.selected
					background: $green2
					color: $white
					cursor: default
				
		>a
			display: block
			margin: 90px 0
			
		>ul
			margin: 40px 0 0
			display: flex
			flex-wrap: wrap
			justify-content: space-between
		>ul:first-of-type
			margin: 0
		>ul>li
			margin: 80px 0 0
			background: $white
			border: 1px solid $gray
			box-shadow: rgba(0,0,0,.2) 0 1px 2px
			position: relative
		>ul>li:first-of-type
			margin: 0
		>ul>li.part
			border-top: 5px solid $orange
			h3
				background: url("../img/list/pc/job_icon02.png") 0 0 no-repeat
				color: $orange
			.item-status table td strong
				color: $orange
			.btn-area
				.btn-submit
					background: $pink
				.btn-submit:hover
					background: $pink1
		>ul>li.full
			border-top: 5px solid $blue
			h3
				background: url("../img/list/pc/job_icon02_02.png") 0 0 no-repeat
				color: $blue
			.item-status table td strong
				color: $blue
			.btn-area
				.btn-submit
					background: $pink
				.btn-submit:hover
					background: $pink1
		>ul>li.pritem
			border-radius: 4px 4px 0 0
			.celebration
				top: -2px
			.item-header
				small
					position: static
					display: block
					height: 32px
					color: $white
					line-height: 30px
					&:before
						content: url(../img/list/pc/pc_list_icon_pr.png)
						display: inline-block
						margin-right: 10px
						position: relative
						top: -11px
						left: -2px
						vertical-align: top
			&.full
				border: 2px solid $blue2
				.item-header
					small
						background: $blue2
						border-bottom: 5px solid $blue
			&.part
				border: 2px solid $orange3
				.item-header
					small
						background: $orange3
						border-bottom: 5px solid $orange
		>ul>li
			width: 100%
			.celebration
				height: 50px
				padding: 5px 20px 0 45px
				background: $pink url("../img/top/pc/job_icon01.png") 15px 12px no-repeat
				border-radius: 0 0 4px 4px
				color: $yellow
				font-size: 1em
				text-align: center
				line-height: 45px
				position: absolute
				top: -5px
				right: 14px
				strong
					font-size: 1.2em
					font-weight: bold
			.item-header
				small
					position: absolute
					top: -2.5em
					left: 0
					font-size: .75em
				p
					padding: 20px 0
					line-height: 2
					a
						display: inline-block
						margin-right: .5em
						padding: .25em 1em .25em 1.5em
						background: $lightgray
						vertical-align: middle
						text-decoration: underline
					a:hover
						background: $gray
			h3
				margin: 0 30px
				padding-left: 60px
				font-size: 1.2em
				line-height: 1.5
			.item-status
				margin: 10px 30px
				display: flex
				figure
					width: 300px
				table
					flex: 1
					height: 210px
					border-collapse: collapse
					th,td
						padding: 0 1.5em
						border: 1px solid $gray
					th
						text-align: center
					td
						text-align: left
						font-weight: bold
						a
							text-decoration: underline
						small
							display: inline-block
							margin-left: 1em
							font-weight: normal
							font-size: .87em
						strong
							display: inline-block
							margin-right: .25em
							font-size: 1.2em
			.item-characters
				margin: 0 20px 0 30px
				ul
					display: flex
					flex-wrap: wrap
					li
						width: 110px
						height: 20px
						margin: 0 3px 3px 0
						border: 1px solid $gray2
						border-radius: 2px
						color: $green
						font-size: .75em
						text-align: center
						line-height: 20px
			.item-comment
				margin: 10px 30px
			.item-footer
				width: 100%
				position: absolute
				bottom: -1.5em
				small
					font-size: .5em
				small:first-of-type
					float: left
				small:last-of-type
					float: right
			.btn-area
				padding: 20px
				background: $lightgray2
				border-top: 1px solid $gray
				text-align: center
				a
					display: inline-block
					height: 60px
					margin: 0 10px
					border-radius: 2px
					font-size: 1.2em
					font-weight: bold
					line-height: 60px
					position: relative
				.btn-keep
					width: 246px
					background: $white
					border: 1px solid $gray
					color: $green
					&:after
						content: url("../img/top/pc/job_icon03.png")
						width: 69px
						height: 45px
						position: absolute
						right: -5px
						bottom: 0
				.btn-keep:hover
					background: $green1
					color: $white
				.btn-submit
					width: 383px
					color: $white

// detail items
	.detail-items
		h3
			margin-bottom: 5px
			font-size: 1.5em
			&:before
				content: url(../img/detail/pc/pc_shousai_titleicon_01.png)
				margin-right: .36em
				vertical-align: middle
				position:relative
				top: 2px

// pr points
	.pr-points
		h3
			background: $orange
			color: $white
			font-size: 1.5em
			line-height: 64px
			text-align: center
			position: relative
			&:before
				content: ""
				display: block
				width: 86px
				height: 86px
				background: $orange
				border-radius: 45px
				position: absolute
				top: -22px
				left: 50%
				margin: 0 0 0 -45px
				z-index: 1
			&:after
				content: url(../img/detail/pc/pc_shousai_pr_img01.png)
				position: absolute
				top: -31px
				left: 50%
				margin: 0 0 0 -27px
				z-index: 2
			span
				position: relative
				z-index: 2
		ul
			display: flex
			flex-wrap: wrap
			justify-content: space-between
			padding: 20px
			background: $lightorange
			li:not(.pr-image)
				display: flex
				flex-direction: column
				width: 48%
				margin-bottom: 20px
				padding: 20px
				background: $white
				position: relative
				strong
					display: block
					margin-bottom: 30px
					font-size: 1.3em
					font-weight: bold
					color: $orange
					text-align: center
				p
					flex: 1
					display: flex
					align-items: center
			li:before
				position: absolute
				left: 50%
			li.pr-message:before
				content: url(../img/detail/pc/pc_shousai_pr_img02.png)
				top: -15px
				margin-left: -19px
			li.pr-charm:before
				content: url(../img/detail/pc/pc_shousai_pr_img03.png)
				top: -18px
				margin-left: -20px
			li.pr-image:before
				content: url(../img/detail/pc/pc_shousai_pr_img04.png)
				top: -12px
				margin-left: -14px
			li:after
				content: ""
				display: block
				width: 45px
				height: 56px
				border-bottom: 1px solid $orange
				position: absolute
				top: 0
				left: 50%
				margin-left: -22px
			li.pr-image
				width: 100%
				display: flex
				flex-wrap: wrap
				justify-content: space-between
				margin-bottom: 0
				padding: 20px
				background: $white
				position: relative
				strong
					display: block
					width: 100%
					margin-bottom: 30px
					font-size: 1.3em
					font-weight: bold
					color: $orange
					text-align: center
				figure
					display: block
					width: 239px
				figcaption
					margin-top: .5em

// subscript flow
	.subscript-flow
		h3
			margin-bottom: 5px
			font-size: 1.5em
			&:before
				content: url(../img/detail/pc/pc_shousai_titleicon_02.png)
				margin-right: .36em
				vertical-align: middle
				position:relative
				top: 2px

// company data
	.company-data
		h3
			margin-bottom: 5px
			font-size: 1.5em
			&:before
				content: url(../img/detail/pc/pc_shousai_titleicon_03.png)
				margin-right: .36em
				vertical-align: middle
				position:relative
				top: 2px

// table ui
	.detail-items, .subscript-flow, .company-data
		dl
			display: flex
			border: 1px solid $gray
			position: relative
			margin-bottom: -1px
			&:first-of-type
				border-top: 2px solid $orange
			dt
				width: 160px
				background: $lightgray
				border-right: 1px solid $gray
				display: flex
				justify-content: center
				align-items: center
			dd
				flex: 1
				display: block
				p
					margin: 20px
				strong
					display: inline
					margin-right: .25em
					font-size: 1.3em
					font-weight: bold
				b
					display: inline
					margin-right: .25em
					font-size: 1.3em
					font-weight: bold
					color: $orange
				a
					text-decoration: underline
				a.maplink:before
					content: url(../img/detail/pc/pc_shousai_icon_map.png)
					display: inline-block
					margin-right: .5em
					vertical-align: middle
				dl
					border-left: 0
					border-right: 0
				dl:first-of-type
					border-top: 0
				dl dt
					width: 110px
					background: transparent
				dl dd
					padding: 20px
				ul.attribute-list
					margin: 0 20px 20px
					li
						display: inline-block
						width: auto
						min-width: 136px
						padding: 0 .5em
						background: $orange
						border-radius: 2px
						color: $white
						font-weight: bold
						line-height: 2
						text-align: center

// btn area
	nav.btn-area
		padding: 100px 0 0
		text-align: center
		a
			display: inline-block
			margin: 0 10px
			font-weight: bold
			position: relative
		.btn-keep
			width: 207px
			height: 58px
			background: $white
			border: 1px solid $gray
			border-bottom: 4px solid $gray
			border-radius: 2px
			color: $green
			font-size: 1.2em
			line-height: 60px
			&:before
				content: url("../img/detail/pc/pc_shousai_icon_keep01.png")
				margin-right: .5em
				vertical-align: middle
				position: relative
				top: 2px
		.btn-keep:hover
			background: $lightgreen
		.btn-submit
			width: 540px
			height: 94px
			margin-left: 68px
			background: $pink
			border-bottom: 8px solid $pink2
			border-radius: 8px
			color: $white
			font-size: 2.4em
			line-height: 90px
			position: relative
			&:hover
				background: $pink1
				border-color: $pink3
			>span
				display: block
				width: 100%
				font-size: 1.25rem
				color: $black
				line-height: 1.2
				text-align: center
				position: absolute
				top: -45px
				&:before
					content: "＼"
					font-size: 1.5em
					position: relative
					left: -.25em
					bottom: -.2em
				&:after
					content: "／"
					font-size: 1.5em
					position: relative
					right: -.25em
					bottom: -.2em
				>b
					margin-left: -.25em
					color: $red
					font-weight: bold
			>b
				margin-left: -.25em
				color: $yellow
				font-weight: bold
			&:before
				content: url(../img/detail/pc/pc_shousai_icon_btn01.png)
				position: absolute
				top: -40px
				left: -68px
			&:after
				content: url(../img/detail/pc/pc_shousai_icon_btn02.png)
				position: absolute
				top: -26px
				right: -19px

// singleJob items
	.singleJob-items
		position: relative
		ul
			margin: 20px 0 0
			li
				display: inline-block
				margin: 0 6px
				padding: 0 0 1rem
				border: 2px solid $gray
				font-size: .87em
				.item-header
					display: inline-block
					margin: 15px 0 0
					line-height: 1.5
					padding: .25em 1em .20em 1.5em
					background: $lightgray
					vertical-align: middle
				p
					margin: .5rem 1.5rem
					font-size: .92rem
				.item-data
					margin: 0 1.5rem .5rem
					padding: .25rem 1rem
					background: $lightgray
					text-align: right
					b
						font-size: 2em
						color: $orange
						font-weight: bold
				dl
					display: flex
					flex-wrap: wrap
					margin: 0 1.5rem
					dt
						display: inline-block
						color: $green
						font-weight: bold
					dd
						flex: 1
		.prev
			display: inline-block
			padding: 20px
			position: absolute
			top: 50%
			left: -60px
			margin-top: -24px
			cursor: pointer
			&:hover
				background: $lightgray
		.next
			display: inline-block
			padding: 20px
			position: absolute
			top: 50%
			right: -60px
			margin-top: -24px
			cursor: pointer
			&:hover
				background: $lightgray

// search conditions
	.search-conditions
		h3
			display: inline-block
			margin-right: 20px
			position: relative
			bottom: -13px
			z-index: 2
			vertical-align: text-bottom
		.type-select
			display: inline-block
			position: relative
			right: auto
			bottom: 0
			z-index: 2
			span
				height: 41px
				line-height: 41px
				cursor: pointer
			span.selected
				height: 48px
				line-height: 48px
				position: relative
				bottom: -1px
		section
			margin-top: 0
			padding: 30px 30px 0
			border: 1px solid $gray
			border-bottom: none
			position: relative
			color: $black2
			$.search-all
				padding-top: 34px
			&.search-part
				margin-top: 0
				border-top: 5px solid $orange
			&.search-full
				margin-top: 0
				border-top: 5px solid $blue
			.search-item
				display: flex
				flex-wrap: nowrap
				margin: 0 0 10px
				label
					display: flex
					justify-content: center
					align-items: center
					width: 154px
					margin: 0 5px 0 0
					padding: 1em
					background: $green2
					border-radius: 4px
					color: $white
					font-size: 1.14em
					line-height: 1.5
					white-space: nowrap
				.condition
					display: block
					flex: 1
					padding: 1em
					background: $lightgray2
					border-radius: 4px
					font-size: 1.14em
					line-height: 1.5
					button
						margin-left: 1em
						padding: 0 1.5em
						background: $white
						border: 1px solid $green2
						border-radius: 1em
						color: $green2
						font-size: .87rem
						line-height: 1.5
						vertical-align: middle
						&:hover
							background: $green2
							color: $white
		.btn-area
			position: relative
			padding: 10px 0 20px
			text-align: center
			border: 1px solid $gray
			border-top: none
			.btn-submit
				display: inline-block
				width: 290px
				height: 60px
				margin: 0 auto
				background: $pink
				border: 0px solid transparent
				border-radius: 6px
				text-align: center
				color: $white
				font-size: 1.14em
				line-height: 60px
			.btn-submit:hover
				background: $pink1
			.btn-clear
				position: absolute
				top: 10px
				right: 30px
				text-decoration: underline
					
	// other items
	.other-items
		>ul
			margin: 0
			display: flex
			flex-wrap: wrap
			justify-content: space-between
		>ul>li
			background: $white
			border: 1px solid $gray
			box-shadow: rgba(0,0,0,.2) 0 1px 2px
			position: relative
			width: 412px
			margin: 20px 0 0
			font-size: .75em
			.celebration
				height: 40px
				padding: 2px 10px 0 35px
				background: $pink url("../img/top/pc/job_icon01_s.png") 11px 7px no-repeat
				border-radius: 0 0 4px 4px
				color: $yellow
				font-size: 1em
				text-align: center
				line-height: 35px
				position: absolute
				top: -1px
				right: 14px
				strong
					font-size: 1.2em
					font-weight: bold
			.item-header
				margin: 15px
				padding: 0 0 10px
				border-bottom: 1px solid $gray
				p
					padding: 0
					strong
						display: block
						margin-bottom: 1em
						padding: .5em 150px .5em 40px
						font-weight: bold
						text-decoration: underline
			h3
				margin: 0 15px
				font-size: 1.2em
				line-height: 1.5
			.item-status
				margin: 10px 30px
				display: flex
				table
					flex: 1
					height: 120px
					th,td
						padding: 0 .5em
						text-align: left
						font-size: 1.2em
						font-weight: bold
						strong
							display: inline-block
							color: $orange
			&:hover
				background: #fffde6
				.item-status figure img
					opacity: 1
			&.part
				.item-header p strong
					background: url("../img/top/pc/job_icon02_01_s.png") 0 0 no-repeat
				h3
					color: $orange
				.item-status table td strong
					color: $orange
			&.full
				.item-header p strong
					background: url("../img/top/pc/job_icon02_02_s.png") 0 0 no-repeat
				h3
					color: $blue
				.item-status table td strong
					color: $blue
		
		>a
			display: block
			margin: 60px 0 0
					
// banner area
	.banner-area
		a
			display: block
			margin: 0 0 20px
		figure
			position: relative
		figcaption
			display: block
			font-size: 2.5rem
			color: $red
			line-height: 170px
			text-align: center
			position: absolute
			top: 0
			right: 310px
			>b
				font-size: 4rem


					