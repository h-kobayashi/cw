// top-part

.pinpoint-search
	margin: 0 auto
	padding: 10px
	background: $green
	li
		margin: 0 0 10px
		a
			display: block
			height: 77px
			padding: 15px 10px 0 80px
			background: $white
			border-radius: 8px
			position: relative
			&:before
				content: ""
				display: block
				width: 80px
				height: 77px
				position: absolute
				top: 0
				left: 0
			strong
				display: block
				color: $orange
				font-size: 1em
				font-weight: bold
				text-align: center
				b
					font-size: 1.2em
					font-weight: bold
			small
				display: block
				font-size: .75em
				text-align: center
	li:nth-of-type(1) a:before
		background: url("../img/top/sp/top_serch_pinpoint.png") center no-repeat
		background-size: 62px 60px
	li:nth-of-type(2) a:before
		background: url("../img/top/sp/top_serch_pinpoint02.png") center no-repeat
		background-size: 66px 57px
	li:nth-of-type(3) a:before
		background: url("../img/top/sp/top_serch_pinpoint03.png") center no-repeat
		background-size: 61px 67px
					
.top-part .contents-area .job-search
	margin: 0 auto
	background: $blue
	h2
		background: $blue

	
	
