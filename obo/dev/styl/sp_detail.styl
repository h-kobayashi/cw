
@import "common/_color"
@import "common/_modal"


.contents-area
	
	// recruit data
	section.recruit-data
		margin-top: 20px
		h2
			font-size: 1.3rem
			&:before
				margin-right: .75em
			
	.list-items
		>ul
			margin: 10px 10px 60px
		>ul>li
			background: $white
			position: relative
		>ul>li
			width: 100%
			.celebration
				height: 30px
				padding: 3px 10px 0 30px
				background: $pink url("../img/top/sp/job_icon01.png") 10px 7px no-repeat
				background-size: 14px 17px
				border-radius: 0 0 4px 4px
				color: $yellow
				font-size: .87em
				text-align: center
				line-height: 25px
				position: absolute
				top: -4px
				right: 0
				strong
					font-size: 1.2em
					font-weight: bold
			.item-header
				padding: 10px 0 0
				font-size: .75em
				a
					display: inline-block
					margin-right: .5em
					padding: 0 1em
					background: $lightgray
					font-weight: bold
					vertical-align: middle
					text-decoration: underline
				p
					padding: 1em
			h3
				margin: 0 10px
				font-size: 1em
				font-weight: bold
				line-height: 1.5
				&:before
					content: ""
					display: block
					float: left
					width: 30px
					height: 30px
					margin: 0 6px 0 0
					position: relative
					top: 5px
			.item-status
				position: relative
				ul
					width: 280px
					margin: 12px auto
					img
						width: 280px
				.prev2
					position: absolute
					padding: 10px
					top: 80px
					left: 50%
					margin-left: -173px
					img
						width: 13px
				.next2
					position: absolute
					top: 80px
					padding: 10px
					top: 80px
					right: 50%
					margin-right: -173px
					img
						width: 13px
				table
					border-collapse: sepalate
					th,td
						padding: .5em 1em
						border: 6px solid $white
						font-size: .87em
					th
						background: $lightgray2
						text-align: center
					td
						text-align: left
						font-weight: bold
						a
							text-decoration: underline
						small
							display: inline-block
							font-weight: normal
							font-size: .87em
						strong
							display: inline-block
							margin-right: .25em
							font-weight: bold
							font-size: 1.2em
			.item-characters
				margin: 0 6px
				ul
					display: flex
					flex-wrap: wrap
					li
						width: 24%
						height: 18px
						margin: 0 3px 3px 0
						border: 1px solid $gray2
						border-radius: 2px
						color: $green
						font-size: .7em
						text-align: center
						line-height: 18px
			.item-comment
				margin: 6px
				font-size: .87em
			.btn-area
				margin: 10px 6px
				padding: 15px 0
				background: $lightgray2
				text-align: center
				a
					display: inline-block
					height: 40px
					border-radius: 4px
					font-size: 1em
					font-weight: bold
					line-height: 40px
					position: relative
				.btn-keep
					width: 100px
					background: $white
					border: 1px solid $green
					border-bottom: 2px solid $green
					color: $green
					&:after
						content: ""
						background: url("../img/top/pc/job_icon03.png") 0 0 no-repeat
						background-size: contain
						display: block
						width: 34px
						height: 22px
						position: absolute
						right: -2px
						bottom: -10px
				.btn-submit
					width: 180px
					color: $white
		>ul>li.part
			border-top: 4px solid $orange
			h3
				color: $orange
				&:before
					background: url("../img/top/sp/job_icon02.png") 0 0 no-repeat
					background-size: contain
			.item-status table td strong
				color: $orange
			.btn-area
				border-bottom: 2px solid $orange
				.btn-submit
					background: $pink
					border-bottom: 2px solid $pink2
					color: $white
		>ul>li.full
			border-top: 4px solid $blue
			h3
				color: $blue
				&:before
					background: url("../img/top/sp/job_icon02_02.png") 0 0 no-repeat
					background-size: contain
			.item-status table td strong
				color: $blue
			.btn-area
				border-bottom: 2px solid $blue
				.btn-submit
					background: $pink
					border-bottom: 2px solid $pink2
					color: $white
	
	// information
	.information
		ul
			margin: 20px 10px 0
			li
				padding: 1em
				border-bottom: 1px solid $gray
				display: flex
				flex-wrap: nowrap
				small
					display: block
					width: 70px
					font-size: .75em
				a
					display: block
					flex: 1
					font-size: .87em
					
	// detail items
	.detail-items
		h3
			padding: 0 0 3px 36px
			background: url(../img/detail/sp/sp_shousai_titleicon_01.png) 11px 0 no-repeat
			background-size: 17px 22px
			font-size: 1.3em
		>dl:first-of-type dt
			border-top: 2px solid $orange
		dt
			display: block
			padding: 6px 11px
			background: $lightorange
			font-size: .87rem
		dd
			font-size: .87rem
			p
				margin: 11px
			strong
				display: inline
				margin-right: .25em
				font-size: 1.3em
				font-weight: bold
			b
				display: inline
				margin-right: .25em
				font-weight: bold
				color: $orange
			a
				text-decoration: underline
			a.maplink:before
				content: url(../img/detail/pc/pc_shousai_icon_map.png)
				display: inline-block
				margin-right: .5em
				vertical-align: middle
			small
				display: block
				margin: 1em
				font-size: .87em
				line-height: 1.5
			dl:not(:first-of-type)
				border-top: 1px solid $gray
			dl
				display: flex
			dl dt
				width: 85px
				padding: 11px
				background: transparent
				border: none
			dl dd
				flex: 1
			ul.attribute-list
				margin: 11px
				li
					display: inline-block
					width: auto
					min-width: 100px
					margin-bottom: .225em
					padding: .1em .5em 0
					background: $orange
					border-radius: 2px
					color: $white
					font-size: .87em
					font-weight: bold
					line-height: 2
					text-align: center

	// pr points
	.pr-points
		margin: 40px 10px 0
		h3
			background: $orange
			color: $white
			font-size: 1.3em
			line-height: 43px
			text-align: center
			position: relative
			&:before
				content: ""
				display: block
				width: 43px
				height: 43px
				background: $orange
				border-radius: 22px
				position: absolute
				top: -12px
				left: 50%
				margin: 0 0 0 -22px
				z-index: 1
			&:after
				content: ""
				display: block
				width: 30px
				height: 26px
				background: url(../img/detail/sp/sp_shousai_pr_img01.png) center no-repeat
				background-size: contain
				position: absolute
				top: -20px
				left: 50%
				margin: 0 0 0 -13px
				z-index: 2
			span
				position: relative
				z-index: 2
		ul
			padding: 20px 10px 10px
			background: $lightorange
			li
				padding: 18px
				background: $white
				position: relative
				strong
					display: block
					margin-bottom: 20px
					font-size: 1.14rem
					color: $orange
					text-align: center
				p
					font-size: .87rem
			li:before
				position: absolute
				left: 50%
			li.pr-message:before
				content: ""
				display: block
				width: 27px
				height: 20px
				background: url(../img/detail/sp/sp_shousai_pr_img02.png) center no-repeat
				background-size: contain
				top: -10px
				margin-left: -13px
			li.pr-charm
				margin-top: 20px
			li.pr-charm:before
				content: ""
				display: block
				width: 29px
				height: 24px
				background: url(../img/detail/sp/sp_shousai_pr_img03.png) center no-repeat
				background-size: contain
				top: -12px
				margin-left: -14px
			li:after
				content: ""
				display: block
				width: 34px
				height: 46px
				border-bottom: 1px solid $orange
				position: absolute
				top: 0
				left: 50%
				margin-left: -17px
					
	// subscript flow
	.subscript-flow
		h3
			padding: 0 0 3px 36px
			background: url(../img/detail/sp/sp_shousai_titleicon_02.png) 11px 0 no-repeat
			background-size: 17px 22px
			font-size: 1.3em

	// company data
	.company-data
		h3
			padding: 0 0 3px 36px
			background: url(../img/detail/sp/sp_shousai_titleicon_03.png) 11px 0 no-repeat
			background-size: 17px 22px
			font-size: 1.3em

	// table ui
	.subscript-flow, .company-data
		dl
			display: flex
			margin: 0 10px
			border: 1px solid $gray
			position: relative
			margin-bottom: -1px
			font-size: .87em
			&:first-of-type
				border-top: 2px solid $orange
			dt
				width: 60px
				padding: 10px
				background: $lightgray
				border-right: 1px solid $gray
				display: flex
				justify-content: center
				align-items: top
			dd
				flex: 1
				display: flex
				align-items: center
				p
					margin: 10px
				strong
					display: inline
					margin-right: .25em
					font-size: 1.3em
					font-weight: bold
				b
					display: inline
					margin-right: .25em
					font-size: 1.3em
					font-weight: bold
					color: $orange
				small
					display: block
					margin-top: 1em
					font-size: .87em
					line-height: 1.5
					
	// btn area
	nav.btn-area
		padding: 20px 0 0
		text-align: center
		a
			display: block
			margin: 0 auto
			font-weight: bold
			position: relative
		.btn-keep
			width: 207px
			height: 37px
			background: $white
			border: 1px solid $gray
			border-bottom: 2px solid $gray
			border-radius: 2px
			color: $green
			font-size: 1.2em
			line-height: 34px
			&:before
				content: ""
				display: inline-block
				width: 19px
				height: 17px
				background: url("../img/detail/sp/sp_shousai_icon_keep01.png") center no-repeat
				background-size: contain
				margin-right: .5em
				vertical-align: middle
				position: relative
				top: 2px
		.btn-submit
			width: 270px
			height: 66px
			margin-top: 66px
			background: $pink
			border-bottom: 4px solid $pink2
			border-radius: 4px
			color: $white
			font-size: 1.5em
			line-height: 60px
			position: relative
			>span
				display: block
				width: 100%
				font-size: 1.14rem
				color: $black
				line-height: 1.1
				text-align: center
				position: absolute
				top: -45px
				left: -30px
				>b
					margin-left: -.25em
					color: $red
					font-weight: bold
			>b
				margin-left: -.25em
				color: $yellow
				font-weight: bold
			&:before
				content: ""
				display: block
				width: 26px
				height: 32px
				background: url(../img/detail/sp/sp_shousai_icon_btn01.jpg)
				background-size: contain
				position: absolute
				top: -40px
				left: -25px
			&:after
				content: ""
				display: block
				width: 60px
				height: 79px
				background: url(../img/detail/sp/sp_shousai_icon_btn02.png)
				background-size: contain
				position: absolute
				top: -50px
				right: -13px

	// banner area
	section.banner-area
		margin: 30px auto 0
		figure
			text-align: center
			position: relative
		figcaption
			font-size: 1.3em
			color: $red
			position: absolute
			right: 127px
			bottom: 2px
			b
				font-size: 1.3em
				font-weight: bold
		
	// other items
	section.other-items
		h2
			font-size: 1.3rem
			&:before
				margin-right: .75em
		ul
			margin: 20px 10px 0
		ul li
			margin-bottom: 12px
			padding: 10px
			border: 1px solid $gray
			position: relative
			.celebration
				height: 30px
				padding: 3px 10px 0 30px
				background: $pink url("../img/top/sp/job_icon01.png") 10px 7px no-repeat
				background-size: 14px 17px
				border-radius: 0 0 4px 4px
				color: $yellow
				font-size: .87em
				text-align: center
				line-height: 25px
				position: absolute
				right: 0
				top: -1px
			.item-header
				&:before
					content: ""
					display: inline-block
					width: 27px
					height: 27px
					vertical-align: middle
				a
					display: inline-block
					margin-right: 0
					padding: 0 .25em
					background: transparent
					font-weight: bold
					font-size:.7em
					vertical-align: middle
					text-decoration: underline
				p
					margin: .5em 0 .5em .5em
					font-size: .7em
			h3
				border-top: 1px solid $gray
				padding: .5em 0
				width: calc(100% - 1em)
				overflow: hidden
				text-overflow: ellipsis
				white-space: nowrap
				font-size: .87rem
				font-weight: bold
				&:before
					display: none
			.item-status
				display: flex
				margin: 0 6px
				figure
					width: 115px
					margin: 0
					img
						width: 115px
						margin: 0
				table
					flex: 1
					border-collapse: collapse
					th,td
						padding: 0 0 0 1em
						border: none
						font-size: .75em
						font-weight: bold
					th
						background: transparent
						text-align: left
					td
						text-align: left
						strong
							font-size: 1em
							font-weight: bold
			&.part
				.item-header:before
					background: url("../img/top/sp/job_icon02.png") 0 0 no-repeat
					background-size: contain
				h3
					color: $orange
				.item-status table td strong
					color: $orange
							
			&.full
				.item-header:before
					background: url("../img/top/sp/job_icon02_02.png") 0 0 no-repeat
					background-size: contain
				h3
					color: $blue
				.item-status table td strong
					color: $blue
		>a
			display: block
			width: 300px
			margin: 25px auto 0
	
	// singleJob items
	.singleJob-items
		position: relative
		h2
			font-size: 1.3rem
			&:before
				margin-right: .75em
		ul
			width: 263px
			margin: 20px auto 0
			li
				display: block
				margin: 0
				padding: 0 0 1rem
				border: 2px solid $gray
				font-size: .87em
				.item-header
					display: block
					margin: 0
					line-height: 1.5
					padding: .25em 0 .20em
					background: $lightgray
					text-align: center
				p
					margin: .5rem 1rem
					font-size: .92rem
				.item-data
					margin: 0 1rem .5rem
					padding: .25rem 1rem
					background: $lightgray
					text-align: center
					b
						font-size: 2em
						color: $orange
						font-weight: bold
				dl
					display: flex
					flex-wrap: wrap
					margin: 0 1rem
					dt
						display: inline-block
						color: $green
						font-weight: bold
					dd
						flex: 1
		.prev
			display: inline-block
			padding: 10px
			position: absolute
			top: 120px
			left: 50%
			margin-left: -165px
		.next
			display: inline-block
			padding: 10px
			position: absolute
			top: 120px
			right: 50%
			margin-right: -165px

// search conditions
	.search-conditions
		h3
			width: 300px
			height: 37px
			margin: 0 auto
			position: relative
			z-index: 3
		.type-select
			display: inline-block
			position: relative
			right: auto
			bottom: 0
			z-index: 2
			span
				height: 41px
				line-height: 41px
				cursor: pointer
			span.selected
				height: 48px
				line-height: 48px
				position: relative
				bottom: -1px
		section
			margin-top: 0
			padding: 10px 10px 0
			border-bottom: none
			position: relative
			color: $black2
			$.search-all
				padding-top: 12px
			&.search-part
				margin-top: 0
				border-top: 3px solid $orange
			&.search-full
				margin-top: 0
				border-top: 3px solid $blue
			.search-item
				display: flex
				flex-wrap: nowrap
				padding: 5px 0
				border-bottom: 1px solid $gray
				label
					display: flex
					justify-content: center
					align-items: center
					width: 55px
					margin: 0 5px 0 0
					padding: 1em
					background: $green2
					border-radius: 4px
					color: $white
					font-size: 1em
					white-space: nowrap
				.condition
					padding: .5rem 2rem .5rem .5rem
					display: flex
					flex-wrap: nowrap
					flex: 1
					justify-content: flex-end
					align-items: center
					text-align: right
					position: relative
					&:after
						content: ""
						display: block
						width: 9px
						height: 14px
						background: url(../img/detail/sp/sp_shousai_arrow02.png) 0 0 no-repeat
						background-size: contain
						position: absolute
						top: 50%
						margin-top: -7px
						right: 10px
					span
						font-size: .87rem
		.btn-area
			position: relative
			padding: 10px 0 0
			text-align: center
			border-top: none
			display: flex
			flex-wrap: nowrap
			justify-content: space-around
			button
				display: block
				line-height: 49px
				height: 49px
			.btn-submit
				width: 187px
				background: $pink
				border: 0px solid transparent
				border-radius: 4px
				text-align: center
				color: $white
				font-size: 1rem
			.btn-clear
				width: 100px
				background: $white
				border: 1px solid $gray
				border-radius: 4px
				font-size: .87rem

					
					