
@import "common/_color"
@import "common/_modal"


.contents-area
	
	// search conditions
	.search-conditions
		margin-top: 15px
		.type-select
			display: block
			position: relative
			text-align: center
			ul
				position: relative
				width: 90%
				margin: 0 auto
			li
				width: 33%
			span
				height: 41px
				line-height: 41px
				cursor: pointer
			span.selected
				height: 48px
				line-height: 48px
				position: relative
				bottom: -1px
		section
			margin-top: 0
			padding: 10px 10px 0
			border-bottom: none
			position: relative
			color: $black2
			$.search-all
				padding-top: 12px
			&.search-part
				margin-top: 0
				border-top: 3px solid $orange
			&.search-full
				margin-top: 0
				border-top: 3px solid $blue
			.search-item
				display: flex
				flex-wrap: nowrap
				padding: 5px 0
				border-bottom: 1px solid $gray
				label
					display: flex
					justify-content: center
					align-items: center
					width: 55px
					margin: 0 5px 0 0
					padding: 1em
					background: $green2
					border-radius: 4px
					color: $white
					font-size: 1em
					white-space: nowrap
				.condition
					padding: .5rem 2rem .5rem .5rem
					display: flex
					flex-wrap: nowrap
					flex: 1
					justify-content: flex-end
					align-items: center
					text-align: right
					position: relative
					&:after
						content: ""
						display: block
						width: 9px
						height: 14px
						background: url(../img/detail/sp/sp_shousai_arrow02.png) 0 0 no-repeat
						background-size: contain
						position: absolute
						top: 50%
						margin-top: -7px
						right: 10px
					span
						font-size: .87rem
		.btn-area
			position: relative
			padding: 10px 0 0
			text-align: center
			border-top: none
			display: flex
			flex-wrap: nowrap
			justify-content: space-around
			button
				display: block
				line-height: 49px
				height: 49px
			.btn-submit
				width: 187px
				background: $pink
				border: 0px solid transparent
				border-radius: 4px
				text-align: center
				color: $white
				font-size: 1rem
			.btn-clear
				width: 100px
				background: $white
				border: 1px solid $gray
				border-radius: 4px
				font-size: .87rem
				
	// listitems
	section.list-items
		margin-top: 15px
		>p:first-of-type
			text-align: center
			font-size: 1rem
			strong
				color: $green2
				font-size: 1.3rem
				small
					margin: 0 -.5em
					font-size: .87rem
		>nav
			.item-sort
				display: flex
				flex-wrap: nowrap
				justify-content: center
				padding: 1em 0
				a
					position: relative
					display: block
					width: 32%
					margin-right: -1px
					padding: .75rem
					border: 1px solid $gray
					z-index: 1
					text-align: center
				a:first-of-type
					border-radius: 4px 0 0 4px
				a:last-of-type
					border-radius: 0 4px 4px 0
				a.selected
					border-color: $green2
					color: $green2
					z-index: 2
					
	.list-items
		>a
			display: block
			width: 300px
			margin: 0 auto 20px
		>ul
			margin: 10px 10px 20px
		>ul>li
			background: $white
			position: relative
		>ul>li
			width: 100%
			.celebration
				height: 30px
				padding: 3px 10px 0 30px
				background: $pink url("../img/top/sp/job_icon01.png") 10px 7px no-repeat
				background-size: 14px 17px
				border-radius: 0 0 4px 4px
				color: $yellow
				font-size: .87em
				text-align: center
				line-height: 25px
				position: absolute
				top: -4px
				right: 0
				strong
					font-size: 1.2em
					font-weight: bold
			.item-header
				padding: 10px 0 0
				font-size: .75em
				a
					display: inline-block
					margin-right: .5em
					padding: 0 1em
					background: $lightgray
					font-weight: bold
					vertical-align: middle
					text-decoration: underline
				p
					padding: 1em
			h3
				margin: 0 10px
				font-size: 1em
				font-weight: bold
				line-height: 1.5
				&:before
					content: ""
					display: block
					float: left
					width: 30px
					height: 30px
					margin: 0 6px 0 0
					position: relative
					top: 5px
			.item-status
				margin: .5rem 0 0
				figure
					display: block
					padding: 0 0 0 100px
					position: relative
					img
						width: 90px
						position: absolute
						left: 0
					span
						display: block
						padding: .5rem 0
						font-weight: bold
						a
							margin: 0 -.25em
							text-decoration: underline
					span:before
						content: ""
						display: inline-block
						margin-right: .5em
						vertical-align: middle
				table
					border-collapse: sepalate
					th,td
						padding: .5em 1em
						border: 6px solid $white
						font-size: .87em
					th
						background: $lightgray2
						text-align: center
					td
						text-align: left
						font-weight: bold
						a
							text-decoration: underline
						small
							display: inline-block
							font-weight: normal
							font-size: .87em
						strong
							display: inline-block
							margin-right: .25em
							font-weight: bold
							font-size: 1.2em
			.item-characters
				margin: 0 6px
				ul
					display: flex
					flex-wrap: wrap
					li
						width: 24%
						height: 18px
						margin: 0 3px 3px 0
						border: 1px solid $gray2
						border-radius: 2px
						color: $green
						font-size: .7em
						text-align: center
						line-height: 18px
			.btn-area
				margin: 10px 0 0
				padding: 15px 0
				background: $lightgray2
				text-align: center
				a
					display: inline-block
					height: 40px
					border-radius: 4px
					font-size: 1em
					font-weight: bold
					line-height: 40px
					position: relative
				.btn-keep
					width: 100px
					background: $white
					border: 1px solid $green
					border-bottom: 2px solid $green
					color: $green
					&:after
						content: ""
						background: url("../img/top/pc/job_icon03.png") 0 0 no-repeat
						background-size: contain
						display: block
						width: 34px
						height: 22px
						position: absolute
						right: -2px
						bottom: -10px
				.btn-more
					width: 180px
					color: $white
			.item-footer
				margin: 5px 0 20px
				display: flex
				justify-content: space-between
				font-size: .7rem
				
		>ul>li.part
			border-top: 4px solid $orange
			h3
				color: $orange
				&:before
					background: url("../img/top/sp/job_icon02.png") 0 0 no-repeat
					background-size: contain
			.item-status .jobtype:before
				width: 14px
				height: 14px
				background: url(../img/list/sp/sp_list_icon_part_1.png)
				background-size: contain
			.item-status .jobpay:before
				width: 14px
				height: 18px
				background: url(../img/list/sp/sp_list_icon_part_2.png)
				background-size: contain
			.item-status table td strong
				color: $orange
			.btn-area
				border-bottom: 2px solid $orange
				.btn-more
					background: $orange
					border-bottom: 2px solid $orange2
					color: $white
		>ul>li.full
			border-top: 4px solid $blue
			h3
				color: $blue
				&:before
					background: url("../img/top/sp/job_icon02_02.png") 0 0 no-repeat
					background-size: contain
			.item-status .jobtype:before
				width: 14px
				height: 14px
				background: url(../img/list/sp/sp_list_icon_full_1.png)
				background-size: contain
			.item-status .jobpay:before
				width: 14px
				height: 18px
				background: url(../img/list/sp/sp_list_icon_full_2.png)
				background-size: contain
			.item-status table td strong
				color: $blue
			.btn-area
				border-bottom: 2px solid $blue
				.btn-more
					background: $blue
					border-bottom: 2px solid $blue2
					color: $white
		>ul>li.pritem
			border-top: none
			position: relative
			&:after
				content: ""
				display: inline-block
				width: 48px
				height: 27px
				background: url(../img/list/sp/sp_list_icon_pr.png)
				background-size: contain
				position: absolute
				top: -10px
				left: 0
				vertical-align: top
			&.full:before
				content: ""
				display: block
				width: 100%
				height: 1px
				background: $white
				border-top: 11px solid $blue2
				border-bottom: 3px solid $blue
			&.part:before
				content: ""
				display: block
				width: 100%
				height: 1px
				background: $white
				border-top: 11px solid $orange3
				border-bottom: 3px solid $orange
			.celebration
				top: 0
		
		
	// other items
	section.other-items
		h2
			font-size: 1.3rem
			&:before
				margin-right: .75em
		ul
			margin: 20px 10px 0
		ul li
			margin-bottom: 12px
			padding: 10px
			border: 1px solid $gray
			position: relative
			.celebration
				height: 30px
				padding: 3px 10px 0 30px
				background: $pink url("../img/top/sp/job_icon01.png") 10px 7px no-repeat
				background-size: 14px 17px
				border-radius: 0 0 4px 4px
				color: $yellow
				font-size: .87em
				text-align: center
				line-height: 25px
				position: absolute
				right: 0
				top: -1px
			.item-header
				&:before
					content: ""
					display: inline-block
					width: 27px
					height: 27px
					vertical-align: middle
				a
					display: inline-block
					margin-right: 0
					padding: 0 .25em
					background: transparent
					font-weight: bold
					font-size:.7em
					vertical-align: middle
					text-decoration: underline
				p
					margin: .5em 0 .5em .5em
					font-size: .7em
			h3
				border-top: 1px solid $gray
				padding: .5em 0
				width: calc(100% - 1em)
				overflow: hidden
				text-overflow: ellipsis
				white-space: nowrap
				font-size: .87rem
				font-weight: bold
				&:before
					display: none
			.item-status
				display: flex
				margin: 0 6px
				figure
					width: 115px
					margin: 0
					img
						width: 115px
						margin: 0
				table
					flex: 1
					border-collapse: collapse
					th,td
						padding: 0 0 0 1em
						border: none
						font-size: .75em
						font-weight: bold
					th
						background: transparent
						text-align: left
					td
						text-align: left
						strong
							font-size: 1em
							font-weight: bold
			&.part
				.item-header:before
					background: url("../img/top/sp/job_icon02.png") 0 0 no-repeat
					background-size: contain
				h3
					color: $orange
				.item-status table td strong
					color: $orange
							
			&.full
				.item-header:before
					background: url("../img/top/sp/job_icon02_02.png") 0 0 no-repeat
					background-size: contain
				h3
					color: $blue
				.item-status table td strong
					color: $blue

	// keyword items
	.keyword-items
		h2
			font-size: 1.3rem
			&:before
				margin-right: .75em
		ul
			margin: 20px 10px 0
			text-align: center
			li
				display: inline-block
				margin: 0 0 .5em
			li a
				display: block
				padding: 0.1em 1.5em 0
				background: $lightgray2
				font-size: 1em
				line-height: 2
				&:hover
					background: $gray
		>a
			display: block
			width: 300px
			margin: 40px auto 0
	
	// information
	.information
		h2
			font-size: 1.3rem
			&:before
				margin-right: .75em
		ul
			margin: 20px 10px 0
			li
				padding: 1em
				border-bottom: 1px solid $gray
				display: flex
				flex-wrap: nowrap
				small
					display: block
					width: 70px
					font-size: .75em
				a
					display: block
					flex: 1
					font-size: .87em

	// special header
	.special-header
		width: 100%