
@import "common/_color"
@import "common/_modal"

// branding
.branding
	width: 100%
	height: 383px
	margin: 0 auto
	padding-top: 114px
	background: url("../img/sales/sp/sp_sales_mainimg_bg1.png") no-repeat center top/cover
	box-shadow: rgba(0,0,0,.2) 0 1px 2px inset
	text-align: center
	overflow: hidden
	position: relative
	h1
		width: 100%
		max-width: 382px
		height: 337px
		margin: 0 auto
		padding: 50px 0 0 0
		background: url(../img/sales/sp/sp_sales_mainimg_bg2.png) no-repeat right top/cover
		text-align: center
		color: $orange
		font-size: 1.5rem
		line-height: 1.2
		position: absolute
		bottom: 3px
		right: 0
		b
			color: $green
			font-weight: bold
		strong
			font-size: 2.5rem
			line-height: 1.5
		small
			display: block
			width: 104px
			height: 104px
			margin: 10px auto
			padding: 30px 0 0 2px
			background: $yellow
			border-radius: 85px
			text-align: center
			color: $black
			font-size: .7rem
			line-height: 1.5
			position: relative
			right: -70px
		span
			display: block
			font-size: .87rem
			color: $black

.main
	width: 100%
	overflow: visible

.contents-area
	width: 100%
	margin: 0 auto
	
	section:not(:first-of-type)	
		margin-top: 0
	section
		text-align: center
		h2
			display: inline-block
			text-align: center
			position: relative
			padding-left: 70px
			&:before
				content: ""
				background: url(../img/sales/sp/sp_sales_point_icon_01.png) no-repeat 0 0/contain
				display: block
				width: 63px
				height: 58px
				position: absolute
				left: 0
				bottom: 2px
				top: auto
				margin: 0
			small
				display: block
				color: $black
				font-size: .87rem
			strong 
				display: block
				color: $green
				font-size: 1.7rem
				font-weight: bold
				line-height: 1
				margin: 5px 0 0 -5px

	// introduction
	.introduction
		padding: 30px 0
		h2
			display: inline-block
			margin: 0 auto 0
			padding: 0 10px
			text-align: center
			color: $green
			font-size: 1.28rem
			font-weight: bold
			line-height: 2rem
			position: relative
			border-bottom: 2px dashed $orange
			strong
				display: inline
				font-size: 1.28rem
				font-weight: bold
				line-height: 2rem
				color: $orange
				b
					font-size: 2rem
			&:before
				content: ""
				display: block
				width: 144px
				height: 82px
				background: url(../img/sales/sp/sp_sales_mainimg_obokun.png) no-repeat 0 0/contain
				position: absolute
				left: -10px
				top: -80px
		>ul
			width: 240px
			margin: 10px auto 0
			text-align: left
			li
				display: block
				color: $green
				font-size: 1.28rem
			for i in (1..3)
				li:nth-of-type({i}):before
					content: "" + i
					display: inline-block
					width: 1.25em
					height: 1.25em
					margin-right: .25em
					background: $orange
					text-align: center
					color: $white
					font-size: 1rem
					line-height: 1.4
					border-radius: 1em
				
	// address
	.sales_address
		width: 100%
		margin: 0 auto 0
		padding: 10px 0 20px
		background: $green
		h3
			margin-bottom: 10px
			color: $white
			font-size: .87rem
			text-align: center
			line-height: 2
		address
			display: flex
			flex-wrap: nowrap
			justify-content: center
			font-style: normal
			a
				display: block
				width: 142px
				height: 52px
				margin: 0 7px
				padding: 8px 0 0
				background: $pink
				border-bottom: 4px solid $darkpink
				border-radius: 5px
				text-align: center
				color: $white
				font-size: 1rem
				font-weight: bold
				line-height: 1.2
				small
					display: block
					font-size: .7rem
					font-weight: normal
					line-height: 1.75
				&:before
					content: ""
					display: inline-block
					margin-right: .25em
					vertical-align: middle
			a:nth-of-type(1):before
				width: 20px
				height: 20px
				background: url(../img/sales/sp/sp_sales_contact_icon01.png) no-repeat 0 0/contain
			a:nth-of-type(2):before
				width: 15px
				height: 20px
				background: url(../img/sales/sp/sp_sales_contact_icon02.png) no-repeat center/contain
		
	// plan
	.sales_plan
		width: 100%
		padding: 30px 0
		background: $lightgreen
		text-align: center
		h2
			display: inline-block
			text-align: center
			position: relative
			small
				display: block
				color: $black
				font-size: .9rem
				margin-bottom: 1em
			strong 
				display: block
				color: $green
				font-size: 1.7rem
				font-weight: bold
				line-height: 1.1
				margin-left: 70px
				position: relative
				&:before
					content: ""
					background: url(../img/sales/sp/sp_sales_point_icon_01.png) no-repeat 0 0/contain
					display: block
					width: 63px
					height: 58px
					position: absolute
					left: -45px
					bottom: 0
					top: auto
					margin: 0
		p
			margin: 20px auto
			text-align: center
			font-size: .9rem
			line-height: 1.75
		h3
			display: block
			width: 270px
			margin: 0 auto
			font-size: 1.1rem
			line-height: 1.2
			text-align: center
			position: relative
			&:before,&:after
				content: ""
				display: block
				width: 21px
				height: 23px
				vertical-align: text-top
				position: absolute
				bottom: 4px
			&:before
				background: url(../img/sales/sp/sp_sales_point_img02.png) no-repeat center/contain
				left: 0
			&:after
				background: url(../img/sales/sp/sp_sales_point_img01.png) no-repeat center/contain
				right: 0
		ul
			width: 284px
			margin: 20px auto
			text-align: center
			li
				display: block
				margin: 0 0 10px
				padding: 20px 0
				background: $orange
				border-radius: 5px
				text-align: center
				dt
					height: auto
					background: none
					line-height: 1
					border-radius: 10px
					color: $white
					font-size: 1rem
					strong
						color: $yellow
						font-size: 1.7rem
						font-weight: bold
				dd
					padding: 0
					span
						display: block
						width: 60%
						height: auto
						margin: 10px auto
						padding: 0
						background: $white
						border-radius: 3rem
						color: $orange
						text-align: center
						font-size: .87rem
						line-height: 1.75
					strong
						color: $yellow
						font-weight: bold
						font-size: 2rem
						line-height: .6
						small
							font-size: .87rem
							font-weight: normal
							position: relative
							margin-left: -.75em
		a
			display: block
			width: 285px
			height: 70px
			margin: 0 auto
			background: $green
			border-bottom: 4px solid $darkgreen
			border-radius: 5px
			text-align: center
			color: $white
			font-size: 1.5rem
			line-height: 70px
			font-weight: bold
	
	// area
	.sales_area
		margin: 0 auto
		margin-top: 0
		padding: 30px 0
		text-align: center
		&:after
			content: ""
			display: block
			clear: both
			width: 1px
			height: 1px
		>p
			margin: 10px auto
			text-align: center
			font-size: .9rem
			line-height: 1.75
			>img
				width: 280px
				margin: 0 auto
		h3
			width: 261px
			height: 31px
			margin: 20px auto
			background: url(../img/sales/sp/sp_sales_point02_subtitlebg.png) 0 0 no-repeat/contain
			text-align: center
			color: $white
			font-size: 1.1rem
			line-height: 31px
		
		h4
			text-align: center
			color: $orange
			font-size: 1.1rem
			margin: 0 auto 5px
			b
				font-size: 1.7rem
				margin-left: -.25em
		.area8
			position: relative
			margin: 10px auto 0
			text-align: center
			img
				width: 299px
				
		.special4
			position: relative
			width: 300px
			margin: 10px auto 0
			ul
				display: flex
				flex-wrap: wrap
				justify-content: space-around
				li
					width: 127px
					margin: 0 0 10px
					color: $orange
					font-size: .87rem
					line-height: 1.2
					text-align: center
					position: relative
					&:before
						content: ""
						display: block
						width: 127px
						height: 73px
						margin: 0 auto 6px
				li:nth-of-type(1):before
					background: url(../img/sales/sp/sp_sales_point02_map_02.png) no-repeat 0 0/contain
				li:nth-of-type(2):before
					background: url(../img/sales/sp/sp_sales_point02_map_03.png) no-repeat 0 0/contain
				li:nth-of-type(3):before
					background: url(../img/sales/sp/sp_sales_point02_map_04.png) no-repeat 0 0/contain
				li:nth-of-type(4):before
					background: url(../img/sales/sp/sp_sales_point02_map_05.png) no-repeat 0 0/contain
	
	// seo
	.sales_seo
		position: relative
		width: 320px
		margin: 0 auto
		&:before
			content: ""
			display: block
			width: 320px
			height: 173px
			margin-bottom: 30px
			background:url(../img/sales/sp/sp_sales_point03_img01.png) no-repeat 0 0/contain
		p
			margin: 10px 20px 30px
			font-size: .9rem
			line-height: 1.75
			text-align: left
	
	// entry
	.sales_entry
		position: relative
		width: 320px
		margin: 0 auto
		&:before
			content: ""
			display: block
			width: 320px
			height: 173px
			margin-bottom: 30px
			background: url(../img/sales/sp/sp_sales_point03_img02.png) no-repeat 0 0/contain
		h2
			padding-left: 40px
		p
			margin: 10px 20px 30px
			font-size: .9rem
			line-height: 1.75
			text-align: left
	
	// btnarea
	.btn-area
		width: 100%
		padding: 25px 0
		background: $green
		a
			display: block
			width: 280px
			margin: 0 auto
			padding: 20px 30px 20px 0
			background: $pink
			border-bottom: 4px solid $darkpink
			border-radius: 0px
			text-align: center
			color: $white
			font-size: 1.28rem
			line-height: 1.1
			position: relative
			&:after
				content: ""
				display: block
				width: 59px
				height: 48px
				background: url(../img/sales/sp/sp_sales_contact_obokun01.png) no-repeat 0 0/contain
				position: absolute
				top: 12px
				right: 22px
					
	// contentsnavi
	.contentsnavi
		padding: 20px 0
		background: url(../img/plan/sp/sp_obo_sec08_bg.png) repeat 0 0/6px 6px
		ul
			text-align: center
			li
				display: inline-block
				margin: 0 5px 15px
				a
					display: block
					width: 133px
					height: 68px
					padding-top: 33px
					background: $white
					border: 1px solid $orange
					border-radius: 5px
					text-align: center
					color: $orange
					font-size: .87rem
					position: relative
					&:before
						content: ""
						display: block
						position: absolute
						left: 50%
					&:after
						content: ""
						background: url(../img/plan/sp/sp_sales_navi_icon05.png) no-repeat center/contain
						display: block
						width: 16px
						height: 16px
						position: absolute
						bottom: -8px
						left: 50%
						margin-left: -8px
			li:nth-of-type(1)
				a:before
					background: url(../img/plan/sp/sp_sales_navi_icon01.png) no-repeat center/contain
					width: 15px
					height: 20px
					margin-left: -7px
					top: 7px
			li:nth-of-type(2)
				a:before
					background: url(../img/plan/sp/sp_sales_navi_icon02.png) no-repeat center/contain
					width: 13px
					height: 14px
					margin-left: -6px
					top: 11px
			li:nth-of-type(3)
				a:before
					background: url(../img/plan/sp/sp_sales_navi_icon03.png) no-repeat center/contain
					width: 19px
					height: 16px
					margin-left: -9px
					top: 10px
			li:nth-of-type(4)
				a:before
					background: url(../img/plan/sp/sp_sales_navi_icon04.png) no-repeat center/contain
					width: 12px
					height: 17px
					margin-left: -6px
					top: 9px
					
	// flow
	.sales_flow
		width: 300px
		margin: 0 auto
		padding: 30px 0
		h3
			width: 227px
			height: 47px
			margin: 0 auto
			background: url(../img/sales/sp/sp_sales_titleRibbon.png) no-repeat 0 0/contain
			text-align: center
			color: $white
			font-size: 1rem
			padding-top: 6px
		figure
			text-align: center
			img
				width: 289px
		figcaption
			display: block
			margin: 20px auto
			text-align: center
			font-size: .87rem
			color: $black2
					
	// image
	.sales_image
		width: 300px
		margin: 0 auto
		padding: 30px 0
		h3
			width: 227px
			height: 47px
			margin: 0 auto
			background: url(../img/sales/sp/sp_sales_titleRibbon.png) no-repeat 0 0/contain
			text-align: center
			color: $white
			font-size: 1rem
			padding-top: 6px
		dl
			position: relative
			margin-top: 30px
			dt
				display: block
				text-align: center
				color: $orange
				font-size: 1rem
				line-height: 1.5
			dd
				display: flex
				flex-wrap: nowrap
				justify-content: space-between
				figure
					display: inline-block
				figcaption
					display: block
					text-align: center
					font-size: .7rem
					margin: 0 0 5px
		p
			text-align: center
			font-size: .87rem
			line-height: 2
			img
				display: block
				width: 308px
				margin 20px 0 10px -8px
	
	// faq
	.sales_faq
		width: 100%
		padding: 30px 0
		text-align: left
		h3
			width: 227px
			height: 47px
			margin: 0 auto
			background: url(../img/sales/sp/sp_sales_titleRibbon.png) no-repeat 0 0/contain
			text-align: center
			color: $white
			font-size: 1rem
			padding-top: 6px
		h4
			display: block
			width: 135px
			height: 24px
			margin: 30px 20px 15px
			background: $orange
			border-radius: 12px
			text-align: center
			color: $white
			font-size: .87rem
			line-height: 24px
		dl
			margin: 10px 20px 0
			padding: 20px 20px 10px
			border: 1px solid $gray
			font-size: .9rem
		dt
			display: block
			color: $green
			&:before
				content: "Q."
				font-size: 1.1rem
				margin-right: .5em
		dd
			display: block
			margin-top: .75em;
			div
				display: none
				&:before
					content: "A."
					color: $orange
					font-size: 1.1rem
					margin-right: .5em
				a
					color: $orange
					text-decoration: underline
			.accordion
				display: block
				width: 100%
				height: 10px
				margin-top: 10px
				padding: 10px
				background: url(../img/about/sp_about_sec09_arrow02.png) no-repeat center/19px 10px
				transition: .4s
			.accordion.opened
				transform: rotate(540deg)
		a
			display: block
			width: 280px
			height: 40px
			margin: 10px auto 0
			border: 1px solid $green
			border-radius: 4px
			text-align: center
			color: $green
			font-size: 1rem
			font-weight: bold
			line-height: 40px
			
	// project
	.sales_project
		padding: 40px 0 0
		background: url(../img/about/about_bg_pat.png) repeat 0 0
		h3
			img
				width: 294px
		p
			width: 280px
			margin: 2em auto 0
			font-size: .87rem
			line-height: 2
			text-align: center
		figure
			padding: 40px 0
			img
				width: 294px
			figcaption
				display: block
				width: 280px
				margin: 15px auto 0
				color: $green
				font-size: 1.1rem

			
// about area
.about-area
	padding: 20px
	text-align: left
	h3
		width: 8em
		margin-bottom: 1em
		padding-bottom: .2em
		color: $black2
		font-size: .87rem
		font-weight: bold
		border-bottom: 1px solid $green4
	p
		color: $black2
		font-size: .87rem
		line-height: 2
		text-align: left
	a
		display: block
		height: 70px
		margin: 10px auto 0
		background: $green
		border-bottom: 3px solid $darkgreen
		border-radius: 5px
		text-align: center
		color: $white
		font-size: 1.28rem
		font-weight: bold
		line-height: 70px
		
