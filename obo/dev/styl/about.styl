					font-size: 1.14rem
					line-height: 1.5
					text-align: left
					position: absolute
					top: 2.5em
					left: 3em
			li:nth-of-type(1)
				top: 88px
				left: 194px
				a
					background: $map1
			li:nth-of-type(2)
				top: 146px
				left: 510px
				a
					background: $map2
			li:nth-of-type(3)
				top: 208px
				left: 35px
				a
					background: $map3
				small
					color: $map3txt
			li:nth-of-type(4)
				top: 165px
				left: 283px
				a
					background: $map4
				small
					left: 4.5em
					color: $map4txt
			li:nth-of-type(5)
				top: 293px
				left: 177px
				a
					background: $map5
				small
					color: $map5txt
			li:nth-of-type(6)
				top: 264px
				left: 500px
				a
					background: $map6
				small
					color: $map6txt
			li:nth-of-type(7)
				top: 417px
				left: 296px
				a
					background: $map7
			li:nth-of-type(8)
				top: 337px
				left: 369px
				a
					background: $map8
				small
					color: $map8txt
				
		.special4
			position: relative
			width: 1100px
			margin: 30px auto 0
			&:before
				content: url(../img/about/pc_about_sec03_img10.png)
				position: absolute
				top: -90px
				left: 10px
			ul
				display: flex
				flex-wrap: wrap
				justify-content: space-between
				li
					width: 540px
					height: 240px
					margin-bottom: 20px
					padding: 36px 0 0 232px
					background: $white
					border: 1px solid $lightgray
					box-shadow: rgba(0,0,0,.1) 0 0 4px
					a
						display: block
						height: 42px
						background: $green2
						color: $white
						font-size: 1.25rem
						line-height: 3rem
						text-align: center
						position: relative
						&:before
							content: url(../img/about/pc_about_sec03_img05.png)
							width: 7px
							height: 9px
							line-height: 9px
							position: absolute
							top: 50%
							right: 1em
							margin-top: -5px
					p
						margin: 1em 1em 0 0
						font-size: 1.14rem
						text-align: left
						
				li:nth-of-type(1)
					background: $white url(../img/about/sp_about_sec03_img04.png) 20px 20px no-repeat
