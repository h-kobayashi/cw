			background: url(../img/about/pc_about_sec04_titilebg.png) 0 0 no-repeat
		figure
			width: 1100px
			height: 190px
			margin: 42px auto 0
			position: relative
		figcaption
			position: absolute
			top: 45px
			left: 610px
			font-size: 1.5rem
			color: $orange4
		p
			width: 1100px
			margin: 0 auto
			padding: 0 30px 0 660px
			font-size: 1.14rem
			line-height: 1.75
		a
			display: block
			width: 380px
			height: 85px
			margin: 30px auto
			background: $pink
			border-bottom: 5px solid $pink2
			border-radius: 5px
			color: $white
			font-size: 1.4rem
			line-height: 85px
			text-align: center
			position: relative
			&:hover
				background: $pink1
				border-color: $pink3
				&:before
					margin-top: -2px
	.point3
		@extend .contents-area .point
		h2
			background: url(../img/about/pc_about_sec05_titilebg.png) 0 0 no-repeat
		p
			width: 1100px
			min-height: 333px
			margin: 40px auto 0
			padding: 30px 570px 0 0
			background: url(../img/about/sp_about_sec05_img01.jpg) right top no-repeat
