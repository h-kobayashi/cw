			margin: 2.5rem auto 0
			font-size: 1.25rem
			line-height: 2.14rem
			text-align: center
		h3
			width: 565px
			height: 93px
			margin: 80px auto 0
			background: url(../img/about/sp_about_sec03_img01.png) 0 0 no-repeat
			text-align: center
			color: $white
			font-size: 2.14rem
			line-height: 93px
			
		.area8
			position: relative
			width: 1100px
			margin: 90px auto 0
			background: url(../img/about/pc_about_cec03_map09.png) no-repeat center top
			&:before
				content: url(../img/about/pc_about_sec03_img02.png)
				position: absolute
				top: -60px
				left: 10px
			ul
				width: 695px
				height: 573px
				margin: 0 auto
				position: relative
			li
				position: absolute
				a
					display: inline-block
					min-width: 143px
					padding: .15em 1.5em .1em 1em
					border-radius: 16px
					font-size: 1.25rem
					color: $white
					white-space: nowrap
					text-align: center
					position: relative
					&:after
						content: url(../img/about/pc_about_sec03_img04.png)
