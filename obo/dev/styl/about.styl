
@import "common/_color"
@import "common/_modal"

// branding
.branding
	width: 100%
	height: 589px
	max-width: 1700px
	margin: 0 auto
	padding-top: 114px
	background: url("../img/about/pc_about_mainimg_bg.jpg") center top no-repeat
	box-shadow: rgba(0,0,0,.2) 0 1px 2px inset
	text-align: center
	h1
		width: 1100px
		height: 270px
		margin: 0 auto
		padding-top: 210px
		background: url(../img/about/pc_about_mainimg_copy.png) center top no-repeat
		position: relative
		font-size: 1.4rem
		strong
			display: none
	small
		display: inline-block
		width: 260px
		height: 40px
		margin: 0 10px
		background: $orange
		border-radius: 20px
		color: $white
		font-size: 1.6rem
		text-align: center
		line-height: 40px

.main
	width: 100%
	max-width: 1700px

.contents-area
	width: 100%
	max-width: 1700px
	margin: 0 auto

	// introduction
	.introduction
		width: 1100px
		margin: 0 auto
		padding: 100px 0 0
		h2
			margin: 0 auto
			text-align: center
			color: $green
			font-size: 2.14rem
			font-weight: bold
			line-height: 1
			&:before
				display: none
		>ul
			display: flex
			flex-wrap: nowrap
			justify-content: center
			margin: 60px auto 0
			li
				display: block
				width: 287px
				height: 287px
				margin: 0 10px
				padding: 100px 0 0
				background: $orange
				border-radius: 144px
				text-align: center
				color: $white
				position: relative
				strong
					display: block
					font-size: 2.14rem
				p
					margin: 1rem auto 0
					font-size: 1.2rem
					line-height: 2.14rem
				&:before
					display: block
					position: absolute
					left: 50%
			li:nth-of-type(1):before
				content: url(../img/about/pc_about_sec01_img01.png)
				top: -36px
				margin-left: -55px
			li:nth-of-type(2):before
				content: url(../img/about/pc_about_sec01_img02.png)
				top: -10px
				margin-left: -53px
			li:nth-of-type(3):before
				content: url(../img/about/pc_about_sec01_img03.png)
				top: 6px
				margin-left: -74px
		p
			margin: 2.5rem auto 0
			font-size: 1.2rem
			line-height: 2.14rem
			text-align: center
			position: relative
		article
			width: 1100px
			margin: 120px auto 0
			h3
				height: 110px
				padding: 0 0 0 280px
				background: $green2
				border-radius: 8px 8px 0 0
				position: relative
				img
					position: relative
					top: -40px
			.points
				padding: 25px
				background: repeating-linear-gradient(-45deg, $lightgreen2 0, $lightgreen2 15px, $white 15px, $white 30px)
				border-radius: 0 0 8px 8px
				ul
					display: flex
					flex-wrap: wrap
					justify-content: center
					li
						display: block
						width: 480px
						height: 120px
						margin: 12px
						padding: 2.14rem 0 0 120px
						background: $white
						background-position: 19px 19px
						background-repeat: no-repeat
						border-radius: 5px
						box-shadow: rgba(0,0,0,.2) 0 1px 2px
						color: $black2
						font-size: 1.2rem
						font-weight: bold
						line-height: 2.4rem
						strong
							color: $orange
							font-weight: bold
					li:nth-of-type(1)
						background-image: url(../img/about/pc_about_sec02_img01.png)
					li:nth-of-type(2)
						background-image: url(../img/about/pc_about_sec02_img02.png)
					li:nth-of-type(3)
						background-image: url(../img/about/pc_about_sec02_img03.png)
					li:nth-of-type(4)
						background-image: url(../img/about/pc_about_sec02_img04.png)
	
	// check
	.check
		width: 100%
		max-width: 1700px
		height: 300px
		margin: 110px auto 0
		padding-top: 60px
		p
			width: 1100px
			margin: 0 auto
			color: $black2
			font-size: 1.7rem
			line-height: 2.14rem
		a
			display: block
			margin-top: 30px
			background: $pink
			border-bottom: 5px solid $pink2
			border-radius: 3px
			color: $white
			text-align: center
			position: relative
			strong
				color: $yellow
				font-size: 1.1em
			&:hover
				background: $pink1
				border-color: $pink3
				&:before
					margin-top: -2px
	.check1
		@extend .contents-area .check
		background: url(../img/about/pc_about_check01_bg.png) center no-repeat
		p
			padding-left: 270px
		a
			width: 547px
			height: 112px
			padding-top: 42px
			&:before
				content: url(../img/about/pc_about_check01_img01.png)
				position: absolute
				top: -74px
				right: -210px
	.check2
		@extend .contents-area .check
		background: url(../img/about/pc_about_check02_bg.jpg) center no-repeat
		a
			width: 450px
			height: 104px
			margin-left: 130px
			padding-top: 23px
			&:before
				content: url(../img/about/pc_about_check02_img01.png)
				position: absolute
				top: -18px
				left: -68px
	.check3
		@extend .contents-area .check
		background: url(../img/about/pc_about_check03_bg.jpg) center no-repeat
		p
			padding-left: 476px
		a
			width: 450px
			height: 104px
			margin-left: 112px
			padding-top: 23px
			&:before
				content: url(../img/about/pc_about_check03_img02.png)
				position: absolute
				top: -18px
				left: -65px
	.check4
		@extend .contents-area .check
		background: url(../img/about/pc_about_check04_bg.jpg) center no-repeat
		p
			padding-left: 530px
		a
			width: 450px
			height: 104px
			margin-left: 60px
			padding-top: 38px
			&:before
				content: url(../img/about/pc_about_check04_img01.png)
				position: absolute
				top: -18px
				left: -38px
	
	// point
	.point
		width: 100%
		max-width: 1700px
		margin: 0 auto
		margin-top: 0
		padding: 75px 0 60px
		h2
			width: 725px
			height: 124px
			margin: 0 auto
			padding: 57px 0 0 210px
			color: $green1
			font-size: 2.14rem
			&:before
				display: none
			strong
				color: $pink
				position: relative
				margin-left: -.4em
