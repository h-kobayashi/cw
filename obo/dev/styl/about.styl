	// cm
	.cm
		width: 100%
		max-width: 1700px
		height: 605px
		margin: 0 auto
		background: url(../img/about/pc_about_sec07_bg.jpg) center top no-repeat
		text-align: center
		figure
			width: 1100px
			margin: 0 auto
			padding: 85px 0 0
			text-align: center
		figcaption
			color: $white
			font-size: 2.14rem
		img
			position: relative
			top: -20px
	
	// flow
	.flow
		width: 100%
		max-width: 1700px
		margin: 0 auto
		text-align: center
		figure
			width: 1100px
			margin: 0 auto
			padding: 85px 0 0
			text-align: center
		figcaption
			color: $green
			font-size: 2.14rem
			font-weight: bold
		img
			position: relative
			top: 36px
	
	// faq
	.faq
		width: 1100px
		margin: 0 auto
		padding: 110px 0 0
		h2
			color: $green
			font-size: 2.14rem
			text-align: center
			&:before
				display: none
		dl
			padding: 2.5rem 0
			font-size: 1.28rem
			&:not(:last-of-type)
				border-bottom: 1px solid $gray
		dt
			display: block
			color: $green
			&:before
				content: "Q."
				font-size: 1.57rem
				margin-right: .5em
		dd
			display: block
			margin-top: .75em;
			&:before
				content: "A."
				color: $orange
				font-size: 1.57rem
				margin-right: .5em
			a
				color: $orange
				text-decoration: underline
	
	// kbp
	.kbp
		width: 1100px
		margin: 0 auto
		padding: 110px 0 0
		h2
			margin-bottom: 60px
			color: $green
			font-size: 2.14rem
			text-align: center
			&:before
				display: none
		p
			margin: 1.75em 0 0
			font-size: 1.28rem
			text-align: center
		figure
			margin: 80px 0 0
			text-align: center
		figcaption
			display: block
			margin: 60px 0 0
			color: $green
			font-size: 1.86rem
			
	
	// commons
	.information, .tokushu-area, .banner-area, .search-items, .about-area
		width: 850px
		margin: 70px auto 0
			