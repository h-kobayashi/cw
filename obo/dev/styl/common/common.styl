
@import "_normalize"
@import "_color"

*
	box-sizing: border-box

html,body
	background: #fff
	font-family: 'Hiragino Kaku Gothic ProN', 'ヒラギノ角ゴ ProN W3', Meiryo, 'メイリオ', Osaka, 'MS PGothic', arial, helvetica, sans-serif
	font-size: 14px
	color: #373737

html,body,h1,h2,h3,h4,h5,h6,table,p,dl,dt,dd,ul,ol,li,hr,header,main,footer,section,article,figure,strong,b
	margin: 0
	padding: 0
	font-weight: normal
ul,ol,li
	list-style: none

img
	vertical-align: text-bottom

a
	color: $black
	text-decoration: none
a:hover img
	opacity: .5

h1,h2,h3,h4,h5,h6,b,strong,dt,th
	font-weight: normal

fieldset
	display: block
	margin: 0
	padding: 0
	font-weight: normal
	border: none

select
	outline: none
	text-indent: .01px
	text-overflow: ''
	background: none transparent
	vertical-align: middle
	font-size: inherit
	color: inherit
	-webkit-appearance: button
	-moz-appearance: button
	appearance: button
	option
		background: white
		color: $black
select::-ms-expand
	display: none
select::-moz-focusring
	color: transparent
	text-shadow: 0 0 0 #828c9a

.wrapper
	width: 100%
	max-width: 1700px
	margin: 0 auto
	padding: 0

.main
	width: 1100px
	margin: 0 auto
	padding: 0 0 100px
	overflow: hidden

.contents-area
	float: left
	width: 850px
	section
		h2
			font-weight: normal
			font-size: 1.5rem
			&:before
				content: ""
				display: inline-block
				width: 15px
				height: 15px
				background: url(../../img/top/pc/title_icon.png) 0 0 no-repeat
				background-size: contain
				position: relative
				top: -1px
				margin-right: .5rem
				font-size: 1.5rem
	section:not(:first-of-type)
		margin-top: 70px
				
.side-area
	float: right
	
.banner-items
	li
		margin: 0 0 20px
		a:hover
			opacity: .7

.ellipsis
	white-space: nowrap
	overflow: hidden
.ellipsis.multiline
	white-space: normal		

@import '_header'
@import '_footer'

