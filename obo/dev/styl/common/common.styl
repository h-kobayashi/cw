
@import "_normalize"
@import "_color"
@import "_font"

*
	box-sizing: border-box

html,body
	background: #fff
	font-family: 'Hiragino Kaku Gothic ProN', 'ヒラギノ角ゴ ProN W3', Meiryo, 'メイリオ', Osaka, 'MS PGothic', arial, helvetica, sans-serif
	font-size: 14px
	color: #373737

html,body,h1,h2,h3,h4,h5,h6,table,p,dl,dt,dd,ul,ol,li,hr,header,main,footer,section,article,figure,strong,b
	margin: 0
	padding: 0
	font-weight: normal
ul,ol,li
	list-style: none

img
	vertical-align: text-bottom

a
	color: $black
	text-decoration: none
a:hover
	color: $orange
a:hover img
	opacity: .7

h1,h2,h3,h4,h5,h6,b,strong,dt,th
	font-weight: normal

fieldset
	display: block
	margin: 0
	padding: 0
	font-weight: normal
	border: none

select
	outline: none
	text-indent: .01px
	text-overflow: ''
	background: none transparent
	vertical-align: middle
	font-size: inherit
	color: inherit
	-webkit-appearance: button
	-moz-appearance: button
	appearance: button
	option
		background: white
		color: $black
select::-ms-expand
	display: none
select::-moz-focusring
	color: transparent
	text-shadow: 0 0 0 #828c9a

:placeholder-shown
	color: $gray3
::-webkit-input-placeholder
	color: $gray3
:-moz-placeholder
	color: $gray3
::-moz-placeholder
	color: $gray3
:-ms-input-placeholder
	color: $gray3

input[type=radio]
	display: none
input[type=radio] + label:before
	content: "　"
	display: inline-block
	width: 1.2em
	height: 1.14em
	margin: 0 .5em 0 0
	background: $white
	border: 2px solid $gray2
	border-radius: .7em
	color: $black2
	font-size: 1em
	text-align: center
	line-height: 1.2em
	vertical-align: text-top
input[type=radio]:checked + label:before
	content: "●"
	
input[type=checkbox]
	display: none
input[type=checkbox] + label:before
	content: "　"
	display: inline-block
	width: 1.14em
	height: 1.14em
	margin: 0 .5em 0 0
	background: $white
	border: 2px solid $orange
	color: $orange
	font-size: 1em
	text-align: center
	line-height: 1.2em
	vertical-align: text-top
input[type=checkbox]:checked + label:before
	content: "✔"

.form__block
	.minict_wrapper
		width: 100%
		height: 2.65rem
		border: none
		border-radius: 4px
		span
			padding-left: .75rem
			height: 2.65rem
			line-height: 2
			&:empty:before
				color: $gray3
		&:after
			height: 2.65rem
			line-height: 2.65rem
		ul
			top: 2.55rem
	
.wrapper
	width: 100%
	max-width: 1700px
	margin: 0 auto
	padding: 0

.main
	width: 1100px
	margin: 0 auto
	padding: 0 0 100px
	&:after
		content: ""
		display: block
		width: 0
		height: 0
		clear: both

.contents-area
	float: left
	width: 850px
	section
		margin: 70px 0 0
		h2
			font-weight: normal
			font-size: 1.5rem
			&:before
				content: ""
				display: inline-block
				width: 15px
				height: 15px
				background: url(../../img/top/pc/title_icon.png) 0 0 no-repeat
				background-size: contain
				position: relative
				top: -1px
				margin-right: .5rem
				font-size: 1.5rem
	section:first-of-type
		margin-top: 0
				
.side-area
	float: right
	
.banner-items
	li
		margin: 0 0 20px
		a:hover
			opacity: .7

.ellipsis
	white-space: nowrap
	overflow: hidden
.ellipsis.multiline
	white-space: normal		

	
// information
	.information
		ul
			margin: 20px 0 0
			li
				padding: 1em
				border-bottom: 1px solid $gray
				display: flex
				flex-wrap: nowrap
				small
					display: block
					width: 100px
					font-size: 1em
				a
					display: block
					flex: 1
				a:hover
					text-decoration: underline
					
// tokushu area				
	.tokushu-area
		a
			display: block
			height: 150px
			margin: 0 0 20px
			padding: 30px
			&:hover
				opacity: .5
			h3
				font-size: 2em
				font-weight: normal
			p
				margin: .5em 0 0
		.tokushu1
			padding-left: 400px
			background: url("../../img/top/pc/bnr_tokushu.jpg") 0 0 no-repeat
			h3
				color: $green
		.tokushu2
			padding-right: 400px
			background: url("../../img/top/pc/bnr_tokushu02.jpg") 0 0 no-repeat
			h3
				color: $orange

// banner area
	.banner-area
		a
			display: block
			margin: 0 0 20px

// search area
	.search-items
		padding: 0 55px
		background: url("../../img/top/pc/top_serch03_bg01.png") center bottom no-repeat, url("../../img/top/pc/top_serch03_bg02.png") top right no-repeat
		border: 1px solid $gray
		h2
			margin: 65px 0 0
		ul
			display: flex
			flex-wrap: wrap
			margin: 30px 0 65px
			li
				display: block
				width: 25%
				margin: 0 0 .75em
				a:hover
					text-decoration: underline

// about area
	.about-area
		padding: 30px
		background: $lightgray2
		a
			display: inline-block
			border-bottom: 2px solid $green
			font-weight: bold
			line-height: 2
		p
			display: block
			margin: 1em 0 0
			font-size: .87em
			line-height: 1.75
		

	
@import '_header'
@import '_footer'

