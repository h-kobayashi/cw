
@import "_color"

.footer__wrapper
	width: 100%
	background: $lightgray

.pagetop
	display: block
	width: 120px
	height: 140px
	position: fixed
	right: 10px
	bottom: 10px
	opacity: 0
	transition: .5s
	&.fixed
		opacity: 1
		&:hover img
			opacity: 1

.footer
	width: 1100px
	margin: 0 auto
	padding: 40px 0
	position: relative
	> p
		margin: 20px 0
	.contact__block
		width: 310px
		position: absolute
		top: 40px
		right: 0

		.btn-contact
			display: block
			padding: 1em
			background: $pink
			border-bottom: 4px solid $pink2
			color: white
			font-size: 1.5rem
			text-align: center
			&:before
				content: ""
				display: inline-block
				width: 24px
				height: 18px
				background: url(../../img/top/pc/footer_icon_05.png) 0 0 no-repeat
				background-size: contain
				position: relative
				top: 1px
				margin-right: .75em
			&:hover
				background: $green_o
			
	.footer-nav
		h4
			margin: 1.5rem 0 0
			color: $pink
		ul
			li
				display: inline-block
				margin: 1rem 2.5rem 0 0
				a
					color: $black
				a:before
					content: ""
					display: inline-block
					width: 6px
					height: 9px
					background: url(../../img/top/pc/footer_icon_list.png) 0 0 no-repeat
					background-size: contain
					margin-right: .5rem
				a:hover
					color: $green
					

.copyright
	width: 100%
	height: 40px
	background: $green
	color: white
	font-size: .75em
	text-align: center
	line-height: 40px
		