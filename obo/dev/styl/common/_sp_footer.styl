
@import "_color"

.footer__wrapper
	width: 100%

.pagetop
	display: block
	width: 97px
	height: 85px
	position: absolute
	top: -22px
	right: 10px
	img
		width: 100%

.footer
	width: 100%
	margin: 0 auto
	padding: 0 0 20px
	position: relative
			
	.footer-nav
		padding: 10px 20px
		border-top: 1px solid $lightgray
		border-bottom: 1px solid $lightgray
		ul
			li
				margin: .25em 0
				a
					color: $black
					font-size: .75em
				a:before
					content: ""
					display: inline-block
					width: 6px
					height: 9px
					background: url(../../img/top/pc/footer_icon_list.png) 0 0 no-repeat
					background-size: contain
					margin-right: .5rem
	.footer-title
		margin: 20px 0 10px
		text-align: center
		small
			font-size: .5em
			display: block
		img
			width: 140px
	.address
		text-align: center
		font-size: .75em

.copyright
	width: 100%
	height: 40px
	background: $green
	color: white
	font-size: .75em
	text-align: center
	line-height: 40px
		