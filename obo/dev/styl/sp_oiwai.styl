
@import "common/_color"
@import "common/_modal"

// branding
.branding
	width: 100%
	min-height: 420px
	margin: 0 auto
	background: url(../img/oiwai/sp/oiwai_sp_mainimg_bg.jpg) center top no-repeat/cover
	text-align: center
	h1
		padding: 10px 7px 0
		color: $pink
		font-weight: bold
		font-size: 2.14rem
		line-height: 1.1
		text-indent: .5em
		span
			display: block
			text-align: center
			width: 280px
		strong
			font-weight: bold
			font-size: 1.33em
			margin-left: -.1em
		&:before
			content: ""
			width: 280px
			height: 86px
			background: url(../img/oiwai/sp/oiwai_sp_mainimg_img01.png) no-repeat 0 0/contain
			display: block
			position: relative
		&:after
			content: ""
			display: block
			width: 161px
			height: 117px
			margin: 0 0 0 20px
			background: url(../img/oiwai/sp/oiwai_sp_mainimg_img02.png) no-repeat center top/contain
			position: relative
	p
		margin: 5px 20px
		padding: 10px 10px
		background: $white
		border-radius: 10px
		box-shadow: rgba(0,0,0,.2) 0 1px 2px
		position: relative
		font-size: .87rem
		line-height: 1.5
		text-align: left
		strong
			color: $pink
			font-size: 1.2em
			&:before
				content: ""
				display: inline-block
				width: 16px
				height: 19px
				background: url(../img/oiwai/sp/oiwai_sp_mainimg_img03.png) no-repeat 0 0/contain
				position: relative
				bottom: -4px
				margin-right: .25em
	

.main
	width: 100%

.contents-area
	width: 100%
	margin: 0 auto

	// introduction
	.introduction
		width: 308px
		height: 837px
		margin: 30px auto 0
		padding: 80px 0 
		background: url(../img/oiwai/sp/oiwai_sp_sec01_frame.png) no-repeat center top/contain
		text-align: center
		h2
			display: inline-block
			margin: 0 auto
			border-bottom: 2px dashed $green
			text-align: center
			color: $green
			font-size: 1.71rem
			font-weight: normal
			line-height: 1.5
			&:before
				display: none
		>p
			margin: 20px auto 0
			>img
				width: 257px
			&:first-of-type
				font-size: 1.1rem
				line-height: １．５
				strong
					color: $pink
					font-weight: bold
					&:before
						content: ""
						display: inline-block
						width: 14px
						height: 17px
						background: url(../img/oiwai/sp/oiwai_sp_sec01_icon01.png) no-repeat 0 0/contain
						position: relative
						bottom: -.25em
						margin-right: .25em
			&:last-of-type
				font-size: 1rem
				line-height: 1.5
				b
					color: $green
		.comment
			margin: 10px 20px;
			padding: 10px 10px
			background: $green
			border-radius: 8px
			position: relative
			text-align: center
			&:before
				content: ""
				display: block
				width: 59px
				height: 51px
				background: url(../img/oiwai/sp/oiwai_sp_sec01_img04.png) no-repeat 0 0 /contain
				position: absolute
				right: -33px
			h3
				color: $yellow
				font-size: 1.28rem
				font-weight: bold
				line-height: 1.2
				strong
					text-decoration: underline
					font-weight: bold
			p
				margin: 10px 0 0
				color: $white
				font-size: .87rem
				line-height: 1.2
				
	// aboutmark
	.aboutmark
		margin: 0
		position: relative
		&:before
			content: ""
			display: block
			width: 26px
			height: 12px
			margin : 20px auto
			background: url(../img/oiwai/sp/oiwai_sp_sec02_pink_img04.png) no-repeat center top /contain
		>ul
			>li
				width: 304px
				margin: 0 auto
				padding: 15px
				h2
					width: 210px
					margin: 0 auto
					border-bottom: 2px dashed $black
					font-size: 1.28rem
					line-height: 2
					text-align: center
					&:before
						display: none
				>p
					padding: 10px 20px
					background: $lightgray2
					border-radius: 8px
					font-size: .87rem
					line-height: 1.5
					strong
						color: $pink
				figure
					margin: 10px
					overflow: hidden
					text-align: center
					>img
						margin: 0 10px
					figcaption
						display: inline-block
						font-size: .87rem
						line-height: 30px
						vertical-align: top
						span
							display: block
							width: 97px
							height: 30px
							border-radius: 15px
							text-align: center
						small
							display: block
							color: $black
							text-align: right
							font-size: 1em
							position: relative
							right: -1em
							img
								position: relative
								margin: 0 .5em 0 0
								width: 8px
		.pinkmark
			height: 827px
			background: url(../img/oiwai/sp/oiwai_sp_sec02_pink_frame.png) no-repeat center top/contain
			&:before
				content: ""
				width: 96px
				height: 29px
				background: url(../img/oiwai/sp/oiwai_sp_sec02_pink_img01.png) no-repeat center top/contain
				display: block
				margin: 0 auto
			h2
				color: $pink
				border-color: $pink
			figure
				>img
					width: 73px
				figcaption
					span
						background: $pink
						color: $white
			.pinkflow
				&:before
					content: ""
					background: url(../img/oiwai/sp/oiwai_sp_sec02_pink_img04.png) no-repeat 0 0/contain
					display: block
					width: 26px
					height: 21px
					margin: 5px auto 0
				h3
					font-size: 1.28rem
					font-weight: bold
					small
						display: inline-block
						padding: 0 1em
						background: $pink
						border-radius: 1em
						color: $white
						font-size: .87rem
						font-weight: normal
						line-height: 2
						position: relative
						top: -2px
						margin-right: .5em
				ul
					li
						width: 273px
						min-height: 95px
						display: block
						margin-top: 20px
						padding-top: 10px
						position: relative
						background: $pink
						border-radius: 8px
						color: $white
						text-align: center
						vertical-align: text-bottom
						h4
							font-weight: normal
							font-size: 1.41rem
							line-height: 1.1
							width: 1.5em
							margin: 0 auto 0
							border-bottom: 2px solid $white
							&:before
								content: ""
								display: block
								width: 71px
								height: 29px
								background: url(../img/oiwai/sp/oiwai_sp_sec02_pink_img05.png) no-repeat center top/contain
								position: absolute
								top: 10px
								left: 40px
							small
								display: block
								font-size: 1rem
								font-weight: normal
						p
							font-size: 1.1rem;
							line-height: 1.2;
							padding: 15px 5px 0;
							color: $white
							small
								display: block
								color: $black
								font-size: 0.7rem;
								margin: 7px;
								line-height: 1.2;
								text-align: left;
					li:first-of-type
						margin-top: 5px
						height: 136px
					li:last-of-type
						height: 106px
					li:not(:last-of-type)
						&:after
							content: ""
							background: url(../img/oiwai/sp/oiwai_sp_sec02_pink_img07.png) no-repeat 0 0/contain
							width: 13px
							height: 8px
							display: block
							position: absolute
							left: 50%
							bottom: -15px
							margin-left: -6px
					li:nth-of-type(1) h4:after
						content: ""
						background: url(../img/oiwai/sp/oiwai_sp_sec02_pink_img06.png) no-repeat 0 0/contain
						width: 48px
						height: 32px
						display: block
						position: absolute
						top: 15px
						right: 60px
					li:nth-of-type(2) h4:after
						content: ""
						background: url(../img/oiwai/sp/oiwai_sp_sec02_pink_img08.png) no-repeat 0 0/contain
						display: block
						width: 41px
						height: 40px
						position: absolute
						top: 15px
						right: 60px
					li:nth-of-type(3) h4:after
						content: ""
						background: url(../img/oiwai/sp/oiwai_sp_sec02_pink_img09.png) no-repeat 0 0/contain
						display: block
						width: 57px
						height: 34px
						position: absolute
						top: 15px
						right: 60px
				>p
					margin: 10px 15px
					font-size: .87rem
		.yellowmark
			background: url(../img/oiwai/sp/oiwai_sp_sec02_yellow_frame.png) no-repeat center top/contain
			&:before
				content: ""
				width: 96px
				height: 29px
				margin: 0 auto
				background: url(../img/oiwai/sp/oiwai_sp_sec02_yellow_img01.png) no-repeat center top/contain
				display: block
			h2
				color: $orange
				border-color: $yellow
			figure
				>img
					width: 83px
				figcaption
					span
						background: $yellow
						color: $pink
			
	// oiwaicheck
	.oiwaicheck
		width: 320px
		margin: 20px auto 0
		padding: 40px 0 0
		background: url(../img/oiwai/sp/oiwai_sp_sec03_bg.jpg) no-repeat center top/contain
		text-align: center
		h2
			float: right
			width: 210px
			height: 69px
			margin: 0 15px 0
			padding: 15px 0 0
			background: url(../img/oiwai/sp/oiwai_sp_sec03_titlebg.png) no-repeat center top/contain
			text-align: center
			color: $white
			font-size: 1.28rem
			line-height: 1.2
			position: relative
			z-index: 2
			&:before
				display: none
		ul
			clear: both
			position: relative
			margin: 0 auto
			padding: 15px 15px 0
			li
				margin: 0 0 10px
			li
				display: block
				padding: 10px 5px 10px 35px
				background: rgba(255,255,255,.8)
				border-radius: 25px
				box-shadow: rgba(0,0,0,.2) 0 1px 2px
				font-size: .87rem
				line-height: 1.2
				text-align: left
				position: relative
				&:before
					content: ""
					display: block
					width: 15px
					height: 15px
					background: url(../img/oiwai/sp/oiwai_sp_sec03_img01.png) no-repeat 0 0/contain
					margin-right: .5em
					position: absolute
					top: 50%
					left: 10px
					margin-top: -8px
		p
			display: block
			margin: 0
			padding: 15px 0
			background: $green
			text-align: center
			position: relative
			span
				display: inline-block
				border-bottom: 2px solid $white
				color: $white
				font-size: 1.28rem
				line-height: 1.5
			&:before
				content: ""
				width: 23px
				height: 11px
				margin: 0 auto 10px
				background: url(../img/oiwai/sp/oiwai_sp_sec03_img04.png) no-repeat center top/contain
				display: block
			&:after
				content: ""
				display: block
				width: 68px
				height: 45px
				background: url(../img/oiwai/sp/oiwai_sp_sec03_img03.png) no-repeat 0 0/contain
				position: absolute
				top: 50%
				right: 10px
				margin-top: -23px

	
	// oiwaiflow
	.oiwaiflow
		margin: 40px auto 0
		text-align: center
		h2
			width: 299px
			height: 77px
			margin: 0 auto
			padding: 10px 0 0
			background: url(../img/oiwai/sp/oiwai_sp_sec04_titilebg.png) no-repeat center top/contain
			color: $white
			font-weight: normal
			font-size: 1.28rem
			line-height: 1.2
			&:before
				display: none
		.oiwaiflow_pink
			&:after
				content: ""
				display: block
				width: 0
				height: 0
				margin: 0 auto
				border-top: 20px solid $pink
				border-right: 25px solid transparent
				border-left: 25px solid transparent
			dt
				display: block
				padding: 47px 0 0
				color: $pink
				font-size : 1rem
				line-height: 1.2
				text-align: center
				strong
					font-size: 1.4em
				&:before
					content: ""
					display: inline-block
					width: 84px
					height: 25px
					background: url(../img/oiwai/sp/oiwai_sp_sec04_pink_img02.png) no-repeat 0 0 /contain
					vertical-align: middle
					margin-right: .5em
			dd
				display: block
				margin: 10px 0 0
				padding: 10px 0
				background: $pink
				color: $white
				position: relative
				small
					display: block
					text-align: center
					img
						width: 16px
						vertical-align: middle
					span
						display: inline-block
						width: 125px
						height: 25px
						margin: 0 10px
						padding: 0
						background: $white
						border-radius: 12px
						color: $black
						font-size: .87rem
						font-weight: bold
						line-height: 25px
						text-align: center
						vertical-align: middle
				p
					font-size: .87rem
					line-height: 1.5
					margin: 10px 0 0
					strong
						color: $yellow
						font-weight: bold
		>p img
			width: 291px
		ol
			width: 320px
			margin: 0 auto
			li
				display: block
				margin: 24px 15px 0
				padding: 10px
				border: 3px solid $gray
				border-radius: 70px
				font-size: .87rem
				line-height: 1.2
				position: relative
				strong
					color: $pink
				small
					display: block
					font-size: .7rem
			li:not(:first-of-type):before
				content: "▼"
				display: block
				width: 18px
				height: 18px
				background: $green2
				border-radius: 9px
				color: $white
				font-size: .87rem
				line-height: 19px
				position: absolute
				top: -24px
				left: 50%
				margin-left: -9px
			for num in (1 .. 4)
				li:nth-of-type({num}):after
					content: "" + num
					display: block
					width: 23px
					height: 23px
					background: $orange
					border-radius: 12px
					color: $white
					font-size: 1rem
					line-height: 24px
					position: absolute
					top: 0
					left: -5px
		.oiwaiflow_yellow
			margin: 20px 0 0
			border-top: 2px solid $yellow2
			dt
				display: block
				padding: 20px 0
				color: $orange
				font-size : 1rem
				line-height: 1.2
				text-align: center
				vertical-align: top
				&:before
					content: ""
					display: inline-block
					width: 84px
					height: 25px
					background: url(../img/oiwai/sp/oiwai_sp_sec04_yellow_img01.png) no-repeat 0 0 /contain
					vertical-align: middle
					margin-right: .5em
				strong
					font-size: 1.28rem
			dd
				display: block
				padding: 20px 0
				background: $yellow2
				small
					display: block
					text-align: center
					img
						width: 16px
						vertical-align: middle
					span
						display: inline-block
						width: 125px
						height: 25px
						margin: 0 10px
						padding: 0
						background: $white
						border-radius: 12px
						color: $orange
						font-size: .87rem
						font-weight: bold
						line-height: 26px
						text-align: center
						vertical-align: middle
				p
					font-size: .87rem
					line-height: 1.5
					margin: 10px 0 0
	
	// oiwaiattention
	.oiwaiattention
		width: 320px
		margin: 40px auto 0
		padding: 20px
		text-align: center
		background: url(../img/oiwai/pc/oiwai_pc_sec05_bg.png32.png) 0 0/12px 12px
		>div
			background: $white
			box-shadow: rgba(0,0,0,.2) 0 1px 2px
			position: relative
			h2
				position: absolute
				top: -32px
				left: 50%
				margin-left: -180px
				width: 360px
				height: 83px
				background: url(../img/oiwai/sp/oiwai_sp_sec05_titilebg.png) no-repeat center top/contain
				color: $orange
				font-size: 1.28rem
				padding-top: 50px
				text-align: center
				&:before
					display: none
			small
				display: block
				padding: 60px 20px 0
				color: $green
				font-size: 1.1rem
				font-weight: bold
				line-height: 1.2
				text-align: left
			ul
				padding: 20px 10px 20px 30px;
				li
					list-style: disc
					font-size: .87rem
					line-height: 1.2
					margin-bottom: 1em
					text-align: left
	
	// oiwaifaq
	.oiwaifaq
		margin: 0 auto
		padding: 40px 0 0
		h2
			width: 227px
			height: 47px
			margin: 0 auto
			background: url(../img/oiwai/sp/oiwai_sp_sec06_titilebg.png) no-repeat center top/contain
			color: $white
			font-size: 1.28rem
			line-height: 2
			text-align: center
			&:before
				display: none
		dl
			margin: 10px 10px 0
			padding: 25px 20px
			border: 1px solid $gray
			line-height: 2
			dt
				color: $green
				font-size: .93rem
				&:before
					content: "Q."
					margin-right: .5em
					font-size: 1.07rem
			dd
				font-size: .93rem
				div
					display: none
				div:before
					content: "A."
					margin-right: .5em
					color: $orange
					font-size: .93rem
				.accordion
					display: block
					width: 19px
					height: 10px
					margin: 20px auto 0
					background: url(../img/faq/sp/sp_about_sec09_arrow02.png) no-repeat center/contain
					transition: .4s
					&.opened
						transform: rotate(540deg)
	