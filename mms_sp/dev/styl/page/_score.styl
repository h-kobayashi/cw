.formcheck-star
	display: inline-block
	width: 120px
	height: 15px
	margin: 0
	background: url("../../img/page/star_orange_01b.png") 0 0 repeat-x
	background-size: 24px 15px
	position: relative
	&:before
		content: ""
		display: block
		width: 120px
		height: 15px
		background: url("../../img/page/star_orange_02b.png") 0 0 repeat-x
		background-size: 24px 15px
		position: absolute
		top: 0
		left: 0

.score0:before
	width: 0% !important
.score5:before
	width: 12% !important
.score10:before
	width: 20% !important
.score15:before
	width: 32% !important
.score20:before
	width: 40% !important
.score25:before
	width: 52% !important
.score30:before
	width: 60% !important
.score35:before
	width: 72% !important
.score40:before
	width: 80% !important
.score45:before
	width: 92% !important
.score50:before
	width: 100% !important

.formcheck-score
	>dd>span
		@extend .formcheck-star
		&:before
			@extend .formcheck-star:before