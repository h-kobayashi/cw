
.header
	display: block
	width: 100%
	margin: 0 auto
	background: #fff
	position: relative
	z-index: 3

	h1
		display: inline-block
		padding: 7px 10px 10px
		font-size: .5em
		font-weight: normal
		line-height: 1.75
		a
			img
				display: block
				width: 172px
	.menubtn
		float: right
		display: inline-block
		width: 20px
		padding: 15px 22px 0 0
		font-size: .4em
		font-weight: bold
		letter-spacing: -.1em
		text-align: center
		cursor: pointer
		&:before
			content: ""
			display: block
			width: 20px
			height: 21px
			margin: 0 4px
			background: url("../../img/common/header_icon_menu.png") 0 0 no-repeat
			background-size: contain
		&:after
			content: "MENU"
	.menubtn.opened
		&:before
			content: ""
			display: block
			width: 20px
			height: 21px
			margin: 0 4px
			background: url("../../img/common/header_icon_close.png") 0 0 no-repeat
			background-size: contain
		&:after
			content: "CLOSE"

.block_menu
	display: none
	width: 100%
	background: #fca834
	position: absolute
	>fieldset
		padding: 11px 9px
		position: relative
	.freeword
		padding-right: 60px
		input
			width: 100%
		a
			position: absolute
			top: 10px
			right: 9px
			display: block
			width: 45px
			height: 36px
			background: #dd7e10
			border-bottom: 3px solid #945506
			border-radius: 5px
			line-height: 30px
			text-align: center
			vertical-align: text-bottom
			img
				width: 16px
	.menulist
		li
			display: inline-block
			width: 100%
			a
				display: inline-block
				box-sizing: border-box
				width: 100%
				padding: .8em 1em .6em
				border-top: 1px solid #fff
				color: #fff
				font-size: 1.2em
				line-height: 1
				position: relative
				&:after
					content: ""
					display: inline-block
					width: 5px
					height: 9px
					background: url('../../img/common/menu_icon_arrow.png') 0 0 no-repeat
					background-size: contain
					position: absolute
					top: 50%
					right: 1em
					margin: -5px 0 0
	.menuclose
		display: block
		padding: .5em
		background: #dd7e10
		color: #fff
		font-size: 1.1em
		text-align: center
		&:before
			content: ""
			display: inline-block
			width: 12px
			height: 12px
			margin: 0 .5em 0 0
			background: url('../../img/common/menu_icon_close.png') 0 0 no-repeat
			background-size: contain

