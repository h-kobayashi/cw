	body.ad
		.wrapper

			include _header.pug

			main.main
				.contents-area
					h2 求人掲載のお申込み
					
					ul.form-step.step1
						li 情報の入力
						li 入力内容の<br>確認
						li 完了
						
					section.form-body
						form(method="post", action="ad_check.html")
							h3 お申込み内容
							.form-items
								.form-item.must
									h3 法人・企業名
										small 必須
									fieldset
										input(type="text", placeholder="例：株式会社エムアイクリニック")
								.form-item.any
									h3 法人・企業名（カナ）
										small 任意
									fieldset
										input(type="text", placeholder="例：カブシキガイシャエムアイクリニック")
								.form-item.must
									h3 郵便番号
										small 必須
									fieldset.postcode
										input(type="text", placeholder="例：1600014")
										button.btn-green 郵便番号から<br>住所を検索
								.form-item.must
									h3 住所
										small 必須
									fieldset.address
										select
											option 都道府県
											optgroup(label="北海道・東北")
												each val in ["北海道", "青森県", "秋田県", "山形県", "岩手県", "宮城県", "福島県"]
													option= val
											optgroup(label="北陸・中部")
												each val in ["新潟県", "富山県", "石川県", "福井県", "山梨県", "長野県", "岐阜県", "静岡県", "愛知県"]
													option= val
											optgroup(label="関東")
												each val in ["茨城県", "栃木県", "群馬県", "埼玉県", "東京都", "神奈川県"]
													option= val
											optgroup(label="近畿")
												each val in ["三重県", "滋賀県", "京都府", "大阪府", "兵庫県", "奈良県", "和歌山県"]
													option= val
											optgroup(label="中国・四国")
												each val in ["鳥取県", "島根県", "岡山県", "広島県", "山口県", "徳島県", "香川県", "愛媛県", "高知県"]
													option= val
											optgroup(label="九州・沖縄")
												each val in ["福岡県", "佐賀県", "長崎県", "熊本県", "大分県", "鹿児島県", "宮崎県", "沖縄県"]
													option= val
									fieldset.address
										select
											option 市区町村
									fieldset.address_any
										input(type="text", placeholder="町名・番地")
									fieldset.address_any
										input(type="text", placeholder="建物名")
								.form-item.must
									h3 担当者氏名
										small 必須
									fieldset.name
										input(type="text", placeholder="例：山田")
										input(type="text", placeholder="例：太郎")
								.form-item.any
									h3 担当者氏名（カナ）
										small 任意
									fieldset.name
										input(type="text", placeholder="例：ヤマダ")
										input(type="text", placeholder="例：タロウ")
								.form-item.must
									h3 メールアドレス
										small 必須
									fieldset
										input(type="text", placeholder="例：example@jusei-kyujin.com")
										small こちらのメールアドレス宛に求人掲載に関する連絡を<br>行います。
								.form-item.must
									h3 電話番号
										small 必須
									fieldset
										input(type="text", placeholder="例：09012345678")
							
