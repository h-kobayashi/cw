	body.inquiries
		.wrapper

			include _header.pug

			main.main
				.contents-area
					h2 お問合せ
					section.form-header
						p 柔整ワーカーへのご質問等お問合せはこちらから承ります。<br>お手数をお掛けいたしますが、以下の項目を入力してください。
							small ※掲載しております情報へのご質問等は各掲載ページのご連絡先へ直接お問合せ下さい。
					ul.form-step.step1
						li 情報の入力
						li 入力内容の<br>確認
						li 完了
					section.form-body
						form(method="post", action="inquiries_check.html")
							p 必須項目は必ずご入力ください。
							ul.error-list
								li お問合せ内容を選択してください。
								li 氏名フリガナを入力してください。
							.form-items
								.form-item.must
									h3 お問合せ内容
										small 必須
									ul
										- var list = ["柔整ワーカーへの質問・ご意見", "求人掲載に関する問い合わせ", "各求人情報に関する問い合わせ", "応募に関する問い合わせ", "エラーはバグに関する問い合わせ", "その他のお問合せ"]
										- var matter = "matter_"
										each item, index in list
											li
												input(type="radio", name="matter", id=matter + index)
												label(for=matter + index)= item
								.form-item.any
									h3 企業名
										small 任意
									fieldset
										input(type="text", placeholder="例：株式会社アーベインスタイル")
								.form-item.must
									h3 氏名
										small 必須
									fieldset
										input(type="text", placeholder="例：山田太郎", value="*入力してください").err
								.form-item.must
									h3 氏名フリガナ
										small 必須
									fieldset
										input(type="text", placeholder="例：ヤマダタロウ")
								.form-item.must
									h3 メールアドレス
										small 必須
									fieldset
										input(type="text", placeholder="例：info@urbane-s.com")
								.form-item.must
									h3 お問合せ内容
										small 必須
									fieldset
										textarea(rows="5", placeholder="お気軽にお問い合わせください。")
							
