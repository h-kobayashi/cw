	body.top
		.wrapper

			include _header.pug
			
			.branding
				h2
					img(src="img/sp_top/top_mainimg.jpg" alt="柔道整復師からの支持率NO.1サイト。PT、あんま、カイロetc...治療家・リハビリ職の仕事をもれなくカバー！")
				p <strong>治療家</strong>、<strong>リハビリ職</strong>のための<strong>専用求人サイト</strong>
			form.front-search
				fieldset.search-item
					label 業態
						small を選ぶ
					.select
						select
							each val in ["指定しない", "病院", "整形外科クリニック", "その他クリニック", "接骨院・整骨院", "鍼灸院", "鍼灸整骨院", "整体院", "マッサージ・リラクゼーション", "スポーツ・フィットネスクラブ", "デイサービス）（通所介護）", "デイケア（通所リハビリ）", "訪問リハビリ", "訪問マッサージ", "訪問介護", "介護老人福祉施設", "介護老人保健施設"]
								option= val

				fieldset.search-item
					label 職種
						small を選ぶ
					.select
						select
							each val in ["指定しない", "柔道整復師", "あん摩マッサージ指圧師", "看護師・准看護師", "理学療法士（PT）", "作業療法士（OT）", "言語聴覚士（SP）", "鍼灸師", "整体師", "カイロプラクター", "スポーツトレーナー", "リラクゼーション系資格"]
								option= val
				fieldset.search-item
					label 都道
						span 府県
						small を選ぶ
					.select
						select
							option 指定しない
							optgroup(label="北海道・東北")
								each val in ["北海道", "青森県", "秋田県", "山形県", "岩手県", "宮城県", "福島県"]
									option= val
							optgroup(label="北陸・中部")
								each val in ["新潟県", "富山県", "石川県", "福井県", "山梨県", "長野県", "岐阜県", "静岡県", "愛知県"]
									option= val
							optgroup(label="関東")
								each val in ["茨城県", "栃木県", "群馬県", "埼玉県", "東京都", "神奈川県"]
									option= val
							optgroup(label="近畿")
								each val in ["三重県", "滋賀県", "京都府", "大阪府", "兵庫県", "奈良県", "和歌山県"]
									option= val
							optgroup(label="中国・四国")
								each val in ["鳥取県", "島根県", "岡山県", "広島県", "山口県", "徳島県", "香川県", "愛媛県", "高知県"]
									option= val
							optgroup(label="九州・沖縄")
								each val in ["福岡県", "佐賀県", "長崎県", "熊本県", "大分県", "鹿児島県", "宮崎県", "沖縄県"]
									option= val
				.btn-area
					button.btn-submit 検索する

