
@import "common/_font"
@import "common/_color"
@import "common/_item"
@import "common/_form"

// itemdata
.item-data
	@extend .smallitem
	margin: 20px 12px 0
	padding: 10px
	border: 1px solid $gray
.itemdata-attribute
	@extend .smallitem-attribute
.itemdata-status
	@extend .smallitem-status

	
.entry
	.contents-area
		h2
			margin: 0 12px
			@extend .b
			font-size: .71rem
			strong
				font-size: 1.25rem
		h2:before
			content: ""
			display: inline-block
			width: 12px
			height: 18px
			margin: 0 .5em 0 0
			background: url(../img/sp_entry/entry_icon01.png) center no-repeat
			background-size: contain
			position: relative
			top: 3px

// form title
.form-body
	>form
		>h3
			@extend .m
			color: $pink
		>h3:nth-of-type(1):before
			content: ""
			display: inline-block
			width: 14px
			height: 19px
			background: url(../img/sp_entry/entry_icon02.png) center no-repeat
			background-size: contain
			margin: 0 .5em 0 0
			position: relative
			top: 3px
		>h3:nth-of-type(2)
			margin-top: 40px
		>h3:nth-of-type(2):before
			content: ""
			display: inline-block
			width: 17px
			height: 18px
			background: url(../img/sp_ad/ad_icon02.png) center no-repeat
			background-size: contain
			margin: 0 .5em 0 0
			position: relative
			top: 3px
		small + textarea
			margin-top: 1.5em
		ul + p
			margin-top: 1.5em

// input size
.form-item
	.btn-green
		width: 45%
		padding: .45em .75em
		font-size: .71rem
		line-height: 1
		vertical-align: bottom
	.postcode input[type=text]
		width: 45%
		display: inline-block

	.name input[type=text]
		width: 45%
		display: inline-block
		&:last-of-type
			margin-left: .5em
	.select,.address
		display: inline-block
		width: 45%
		margin: 0 .5em 0 0
		background: $lightpink2
		border: 1px solid $lightgreen
		position: relative
		&:after
			content: "â–¼"
			display: inline-block;
			position: absolute
			top: 50%
			right: 10px
			margin-top: -.75em
		select
			width: 100%
			padding: .5em
			border: none
	.select:first-of-type
		display: block
		margin-bottom: .75em
	.address
		margin-top: 10px
	fieldset + fieldset.address_any
		margin-top: .5em
		input[type=text]
			background: white
