@import "_font"
@import "_color"

.large-item
	display: block
	margin: 15px 10px 10px
	border-top: 4px solid $pink
	position: relative
	&:not(:first-of-type)
		margin-top: 25px
	.btn-area
		display: block
		width: 100%
		padding: 10px
		background: $lightgray
		border-bottom: 1px solid $gray4
		text-align: center
		a
			display: inline-block
			width: 40%
			height: 40px
			margin: 0 10px
			border-radius: 4px
			font-size: 1.07rem
			line-height: 40px
			vertical-align: text-bottom
			
	.btn-keep
		position: absolute
		top: -25px
		right: 0px
		width: 50px
		height: 50px
		margin: 0
		padding: 25px 0 0
		background: $orange
		border: 5px solid $lightgray
		border-radius: 25px
		color: white
		@extend .m
		font-size: .5rem
		line-height: 1
		text-align: center
		&:hover
			background-color: $orange_o
		&:before
			content: ""
			width: 17px
			height: 17px
			background: url(../img/sp_top/icon_keep.png) center no-repeat
			background-size: contain
			position: absolute
			top: 5px
			left: 50%
			margin-left: -9px
			
.largeitem-title
	padding: 15px 5px
	background: $lightgray
	@extend .b
	font-size: .64rem
	line-height: 1
	position: relative
	small
		display: block
		margin: 0 0 10px
		color: $pink
		font-size: .71rem
		&:before
			content: "["
		&:after
			content: "]"
	strong
		font-size: 1.07rem
	>ul
		position: absolute
		right: 10px
		bottom: 10px
		li
			display: inline-block
			width: 1.5rem
			height: 1.5rem
			padding: .45rem 0 0
			background: $pink
			border-radius: 1.5rem
			color: white
			font-size: .75rem
			text-align: center
			line-height: 1

		
.largeitem-attribute
	margin: 15px 0 0
	@extend .m
	font-size: .64rem
	>ul
		display: inline-block
		padding: .5em
		background: $lightpink
		>li
			display: inline
			padding: 2px 0
			color: $pink
			text-align: center
		>li:not(:first-of-type):before
			content: "/"
					
.largeitem-comment
	margin: 0 5px
	strong
		display: block
		margin: 15px 0 5px
		color: $orange
		@extend .b
		font-size: 1rem
	span
		display: block
		height: auto
		padding: 0 0 0 107px
		font-size: .64rem
		line-height: 1.5
		position: relative
		img
			width: 93px
			position: absolute
			top: 1px
			left: 0
	span.ellipsis
		height: 3em
			
.largeitem-status
	margin: 10px 5px
	dl
		margin: 0
		position: relative
		border-top: 1px solid $gray
		font-size: .78rem
		dt
			position: absolute
			width: 65px
			padding: 10px 0 10px .75rem
			background: url(../img/sp_list/lilst_serch_icon01.png) 2px 14px no-repeat
			background-size: 4px 6px
			@extend .m
			color: $pink
		dd
			position: relative
			padding: 10px 0 10px 65px
			border-bottom: 1px solid $gray
			small
				display: inline-block
				font-size: .64rem
			strong
				display: inline-block
				margin-left: .5rem
				@extend .b
				b
					color: $orange
					font-size: 1rem

.largeitem-characters
	margin: 10px 5px
	display: flex
	flex-wrap: wrap
	justify-content: space-between
	li
		display: inline-block
		width: 24%
		padding: 2px 0
		border: 1px solid $pink
		border-radius: 2px
		color: $pink
		@extend .m
		font-size: .64rem
		text-align: center


// small items
.small-items
	margin: 0 10px
	ul
		margin-top: 10px
		
.smallitem
	>a
		display: block
		margin: 0 0 10px
		padding: 10px 15px
		border: 1px solid $gray
	>a:hover
		background: $yellow
	h3
		@extend .b
		font-size: .64rem
		position: relative
		small
			display: block
			margin: 2px 0
			color: $pink
			font-size: .71rem
			&:before
				content: "["
			&:after
				content: "]"
		strong
			font-size: 1.07rem
	p
		strong
			display: block
			white-space: nowrap
			overflow: hidden
			text-overflow: ellipsis
			color: $orange
			@extend .b
.smallitem-attribute
	position: absolute
	top: 0
	right: 0
	@extend .m
	font-size: .64rem
	>ul
		display: inline-block
		margin: 0
		padding: .25em .5em
		background: $lightpink
		>li
			display: inline
			padding: 2px 0
			color: $pink
			text-align: center
		>li:not(:first-of-type):before
			content: "/"

.smallitem-status
	display: flex
	margin: 10px 0 0
	figure
		width: 90px
		height: 68px
		margin-right: 1rem
		img
			width: 90px
			height: 68px
	>div
		flex: 1
		>dl
			line-height: 1.3
			dt
				font-size: .64rem
			dd
				@extend .b
				font-size: .85rem
				b
					color: $orange
		>p
			font-size: .64rem
		
// search
.search-business,.search-job,.search-area,.search-character
	h2
		margin-bottom: 10px
	h3
		margin: .5rem 0
		color: $pink
		@extend .m
		font-size: 1rem
		&:before
			content: "▼"
			display: inline-block
			margin-right: .25em
	ul
		display: flex
		flex-wrap: wrap
		justify-content: flex-start
	a
		display: block
		margin: 0 0 15px
		padding: 2px 0 0
		background: $lightpink
		color: $black
		@extend .m
		line-height: 2
		text-align: center
		&:hover
			background: $lightpink_o

.search-business,.search-job
	ul
		margin-top: 20px
	li
		width: 31.5%
		margin-right: 1.8%

.search-area
	ul
		flex-wrap: nowrap
	li
		width: 6rem
		margin-right: 10px

.search-character
	ul
		justify-content: space-between
	li
		width: 23%
		
// topics area
.topics-area
	width: 300px
	margin: 10px auto 25px
	.topic_contact
		margin: 25px 0 0
		padding-bottom: 5px
		background: $pink
		h3
			padding: 10px 0 10px 55px
			background: $darkpink
			font-family: "HGP創英角ｺﾞｼｯｸUB"
			color: white
			font-size: 1.14rem
			position: relative
			&:before
				content: ""
				display: block
				width: 49px
				height: 55px
				background: url(../img/sp_top/top_ask_img01.png) center no-repeat
				background-size: contain
				position: absolute
				left: 0
				bottom: 0
		p
			padding: 10px
			@extend .m
			color: $darkpink
			font-size: .71rem
			text-align: center
		.tel-btn
			display: block
			margin: 0 10px
			padding: 10px
			border: 3px solid $yellow3
			border-radius: 3px
			font-family: "HGP創英角ｺﾞｼｯｸUB"
			font-size: 1.07rem
			color: $yellow3
			text-align: center
			box-shadow: $darkyellow 0 3px 0
			small
				display: block
				font-size: .71rem
				color: white
			&:before
				content: ""
				display: inline-block
				width: 13px
				height: 13px
				background: url(../img/sp_top/top_ask_icon01.png) center no-repeat
				background-size: contain
				margin-right: .5rem
				position: relative
				top: 1px
		.contact-btn
			display: block
			margin: 10px
			padding: 15px
			background: $yellow3
			border-radius: 3px
			font-family: "HGP創英角ｺﾞｼｯｸUB"
			font-size: 1.07rem
			color: $pink
			text-align: center
			box-shadow: $darkyellow 0 3px 0
			&:before
				content: ""
				display: inline-block
				width: 17px
				height: 13px
				background: url(../img/sp_top/top_ask_icon02.png) center no-repeat
				background-size: contain
				margin-right: .5rem
				position: relative
				top: 1px
	
	.topic_keep
		display: block
		margin: 10px auto
		img
			display: block
			width: 300px
			height: 82px
			
	.topic_tokushu
		display: block
		width: 300px
		height: 82px
		margin: 10px auto
		padding: 7px 60px 0 70px
		background: url(../img/sp_top/top_bnr_02.png) 0 top no-repeat
		background-size: contain
		strong
			display: block
			margin-bottom: .25rem
			@extend .r
			font-size: 1.28rem
			color: $darkpink
		small
			display: block
			@extend .r
			font-size: .71rem


// search
.searchbtn-area
	display: flex
	flex-wrap: wrap
	justify-content: center
	margin: 10px
	padding: 10px
	background: $pink
	border-radius: 4px
	a
		display: block
		width: 45%
		margin: 5px
		padding: 30px 0 7px
		background: $pink
		border: 2px solid white
		border-radius: 4px
		@extend .m
		color: white
		font-size: .78rem
		text-align: center
		position: relative
		strong
			font-size: 1.07rem
		&:before
			content: ""
			display: block
			width: 100%
			position: absolute
			background-size: contain
			background-position: center
			background-repeat: no-repeat
	.search-business:before
		height: 17px
		background-image: url(../img/sp_top/top_serch_icon01.png)
		top: 10px
	.search-job:before
		height: 18px
		background-image: url(../img/sp_top/top_serch_icon02.png)
		top: 10px
	.search-area:before
		height: 20px
		background-image: url(../img/sp_top/top_serch_icon03.png)
		top: 10px
	.search-charactor:before
		height: 13px
		background-image: url(../img/sp_top/top_serch_icon04.png)
		top: 12px