
@import "_color"

// step
.form-step
	width: 294px
	height: 48px
	margin: 20px auto
	background: url(../img/sp_inquiries/form_step_bg1.png) center no-repeat
	background-size: contain
	display: flex
	flex-wrap: nowrap
	justify-content: space-around
	align-items: center
	li
		flex: 1
		@extend .m
		list-style: none
		display: inline-block
		text-align: center
		color: white
		font-size: .857rem
	&.step1
		background-image: url(../img/sp_inquiries/form_step_bg1.png)
	&.step2
		background-image: url(../img/sp_inquiries/form_step_bg2.png)
	&.step3
		background-image: url(../img/sp_inquiries/form_step_bg3.png)

// form body
.contents-area section.form-body
	margin: 0 12px
	font-size: .857rem

.error-list
	margin: 20px 0 0
	li
		list-style: none
		color: $red
		text-align: center
		&:before
			content: "*"

// form item
.form-items
	margin: 20px 12px 0
	padding: 0 10px 10px;
	border: 1px solid $gray2
.form-item
	display: block
	margin: 20px 0 0
	h3
		padding: .5rem .75rem
		background: $lightblue
		@extend .m
		font-size: 1rem
		>small
			display: inline-block
			margin: 0 .25rem
			padding: 0 .25rem
			border-radius: 3px
			font-size: .71rem
			line-height: 1rem
			color: white
			position: relative
			top: -2px
	&.must h3>small
		background: $red2
	&.any h3>small
		background: $gray4

	h3 + fieldset
		margin: 10px 0 0
	ul li
		margin: 10px 0 0
		padding: .5rem .75rem
		background: $lightblue2
			
	input[type=radio],input[type=checkbox]
		display: none
		& + label
			margin-right: 1rem
	input[type=radio] + label:before
		content: ""
		display: inline-block
		width: 1rem
		height: 1rem
		background: white
		border: 2px solid $lightgreen
		border-radius: .7rem
		position: relative
		top: 0
		margin-right: .5rem
		vertical-align: text-top
		color: $lightgreen
		line-height: 1.2
		text-align: center
	input[type=radio]:checked + label:before
		content: "●"
		background: none
	input[type=checkbox] + label:before
		content: ""
		display: inline-block
		width: 1rem
		height: 1rem
		background: white
		border: 1px solid $lightgreen
		position: relative
		top: 1px
		margin-right: .5rem
		color: white
		font-size: 1.2rem
		vertical-align: text-top
		line-height: 1
	input[type=checkbox]:checked + label:before
		background: $lightgreen
		content: "✓"
	input[type=text],textarea
		box-sizing: border-box
		display: block
		width: 100%
		padding: .5em .75em
		border: 1px solid $lightgreen
	&.must
		input[type=radio]+label:before,input[type=checkbox]+label:before,input[type=text],textarea
			background: $lightpink
	.btn-green
		display: inline-block
		padding: .5em .75em
		background: $green2
		border: 2px solid $green2
		border-radius: 5px
		color: white
		&:hover
			background: $green2_o
			border-color: $green2_o
	.err
		background: $lightpink
		color: $red
	fieldset:not(.select) + fieldset
		margin-top: 1em

// policy check
.policy-check
	margin: 20px 12px 0
	padding: 10px
	border: 1px solid $gray2
	h3
		padding: .5rem .75rem
		background: $lightblue
		@extend .m
		font-size: 1rem
	fieldset
		display: block
		padding: 1em
		font-size: 1em
		text-align: left
		input[type=checkbox]
			display: none
		label
			display: block
			margin-right: 1rem
			>small
				display: inline-block
				margin: 0 .25rem
				padding: 0 .25rem
				background: $red2
				border-radius: 3px
				font-size: .71rem
				line-height: 1rem
				color: white
				position: relative
				top: -2px
		label:before
			content: ""
			float: left
			display: inline-block
			width: 2rem
			height: 2rem
			background: $lightpink
			border: 1px solid $lightgreen
			position: relative
			top: 1px
			margin-right: .5rem
			color: white
			font-size: 1.5rem 
			text-align: center
			vertical-align: text-top
			line-height: 2rem
			position: relative
			top: 2px
		input:checked + label:before
			content: "✓"
			background: $lightgreen
	article
		padding: 10px
		border: 1px solid $lightblue
		>div
			height: 105px
			overflow: auto
			font-size: .64rem
			line-height: 1.75

.btn-area
	padding: 20px 0
	text-align: center
	.btn-submit
		margin: 0 .5em
		padding: 1rem 3rem
		border: none
		border-bottom: 3px solid $darkgreen
		border-radius: 6px
		font-size: 1.21rem
	.btn-cancel
		margin: 0 .5em
		padding: 1rem 3rem
		border: none
		border-radius: 4px
		font-size: 1.21rem

// form end
.contents-area section.form-end
	margin-top: 0
	text-align: center
	>h3
		@extend .b
		margin: 40px auto
		font-size: 1.5em
		letter-spacing: .25em
	>p
		font-size: 1.2em
	>a
		display: block
		width: 240px
		margin: 60px auto
		padding: .75rem
		border: 1px solid $pink
		border-radius: 4px
		color: $pink
		font-size: 1.2rem
		&:hover
			border-color: $darkpink
			color: $darkpink
		
