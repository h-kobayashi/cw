.header
	width: 100%
	height: 104px
	margin: 0 auto
	background: $white

.header-container
	width: 100%
	max-width: 1120px
	margin: 0 auto
	padding: 20px 0 0
	position: relative
	h1
		display: inline-block
		small
			display: block
			font-size: .87rem
			font-weight: bold
			line-height: 1
		img
			display: inline-block
			vertical-align: top
		strong
			display: inline-block
			font-size: .87rem
			font-weight: bold
			line-height: 3
			vertical-align: top
	address
		float: right
		display: block
		width: 380px
		font-style: normal
		position: relative
		a
			font-family: Lato
			font-weight: bold
			vertical-align: bottom
			line-height: 2rem
			position: absolute
			top: 5px
			&:hover
				color: $red
			i
				display: inline-block
				padding: .5em
				background: $red
				border-radius: 1em
				color: $white
				font-size: 1.2rem
				line-height: 1
		.tel
			font-size: 2rem
			i
				margin-right: .5em
				vertical-align: top
		.mail
			font-size: 1rem
			right: 0
			i
				margin-left: .5em
				vertical-align: middle
				
.globalnav
	clear: both
	width: 100%
	input[type=checkbox],.sp-gnav
		display: none
	ul
		display: flex
		flex-wrap: nowrap
		li
			flex: 1
			padding: .5em 0
			a
				display: block
				border-right: 1px solid $black
				text-align: center
				font-size: 1.1rem
				font-weight: bold
				color: $black
				line-height: 1
				&:hover
					color: $red
		li.selected a
			color: $red
			cursor: default
		li:first-of-type a
			border-left: 1px solid $black
			
// fix header
.fixheader
	width: 100%
	height: 70px
	margin: 0 auto
	background: $black
	position: fixed
	top: -70px
	left: 0
	right: 0
	transition: .3s
	&.show
		top: 0
		


		
		
		
// mobile
@media screen and (max-width: 767px)
	
	.header
		height: auto
		position: fixed
		top: 0
		z-index: 99
		box-shadow: rgba(0,0,0,.2) 0 1px 2px
	.header-container
		height: 42px
		padding: 0
		h1
			display: inline-block
			padding: 7px
			font-size: .7rem
			line-height: 1
			small
				display: none
			img
				width: 120px
				font-size: .5rem
				line-height: 1
			strong
				display: block
				margin: 2px 0 0
				font-size: .7rem
				line-height: 1
		address
			position: absolute
			top: 0
			right: 45px
			.tel
				display: none
			.mail
				span
					display: none
				i
					background: none
					color: $black
					border-radius: 0
		.globalnav
			position: absolute
			top: 5px
			right: 0
			width: 40px
			.sp-gnav
				display: inline-block
				i.fa-bars
					display: inline-block
					height: 30px
					padding: .5em
					color: $black
					font-size: 1.2rem
					line-height: 1
			ul
				display: none
				width: 200px
				background: $lightgray2
				position: absolute
				top: 37px
				right: 0
				box-shadow: rgba(0,0,0,.2) 0 2px 5px
				li
					padding: 0
				li a
					display: block
					padding: .75em 1em
					border: none
					border-top: 1px solid $white
					border-bottom: 1px solid $gray
					font-size: 1rem
					text-align: left
			input:checked + label
				i.fa-bars
					background: $lightgray2
					box-shadow: rgba(0,0,0,.2) 1px 1px 1px inset
			input:checked + label + ul
				display: block
				z-index: 99
			



